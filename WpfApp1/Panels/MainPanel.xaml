<UserControl x:Class="WpfApp1.Panels.MainPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Controls="http://schemas.stackdose.com/wpf"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1600"
             Background="{DynamicResource Cyber.Bg.Dark}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="350"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Section: 3 Columns (2.5 : 2.5 : 5) -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: PLC Status and Process Control (2.5) -->
            <Border Grid.Column="0" BorderBrush="#00E5FF" BorderThickness="2" 
                    Background="{DynamicResource Cyber.Bg.Panel}" CornerRadius="5" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#00E5FF" Padding="8,4">
                        <TextBlock Text="PLC Status" FontSize="14" FontWeight="Bold" 
                                  Foreground="Black" HorizontalAlignment="Center"/>
                    </Border>

                    <!-- PLC Status Indicator (Display Only) -->
                    <Controls:PlcStatusIndicator Grid.Row="1"
                        DisplayAddress="192.168.22.39:3000"
                        HorizontalAlignment="Stretch"
                        Margin="10,10,10,5"/>

                    <!-- Process Control Buttons -->
                    <Grid Grid.Row="2" Margin="10,5,10,10">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="5">
                                <Controls:SecuredButton 
                                    Content="Start Process" 
                                    Theme="Success"
                                    Height="32" Margin="5,5,5,8"
                                    RequiredLevel="Operator"
                                    OperationName="Start Process"
                                    HorizontalAlignment="Stretch"
                                    FontSize="12"/>

                                <Controls:SecuredButton 
                                    Content="Stop Process" 
                                    Theme="Error"
                                    Height="32" Margin="5,0,5,8"
                                    RequiredLevel="Operator"
                                    OperationName="Stop Process"
                                    HorizontalAlignment="Stretch"
                                    FontSize="12"/>

                                <Controls:SecuredButton 
                                    Content="Clean Start" 
                                    Theme="Warning"
                                    Height="32" Margin="5,0,5,8"
                                    RequiredLevel="Instructor"
                                    OperationName="Clean Start"
                                    HorizontalAlignment="Stretch"
                                    FontSize="12"/>

                                <Controls:SecuredButton 
                                    Content="Clean Stop" 
                                    Theme="Error"
                                    Height="32" Margin="5,0,5,8"
                                    RequiredLevel="Instructor"
                                    OperationName="Clean Stop"
                                    HorizontalAlignment="Stretch"
                                    FontSize="12"/>

                                <Controls:SecuredButton 
                                    Content="Emergency Stop" 
                                    Theme="Error"
                                    Height="32" Margin="5,0,5,8"
                                    RequiredLevel="Operator"
                                    OperationName="Emergency Stop"
                                    HorizontalAlignment="Stretch"
                                    FontSize="12"
                                    FontWeight="Bold"/>

                                <Controls:SecuredButton 
                                    Content="Reset System" 
                                    Theme="Info"
                                    Height="32" Margin="5,0,5,5"
                                    RequiredLevel="Supervisor"
                                    OperationName="Reset System"
                                    HorizontalAlignment="Stretch"
                                    FontSize="12"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>

            <!-- Middle: PrintHead Status (2.5) -->
            <Border Grid.Column="1" BorderBrush="#00E5FF" BorderThickness="2" 
                    Background="{DynamicResource Cyber.Bg.Panel}" CornerRadius="5" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#00E5FF" Padding="8,4">
                        <TextBlock Text="PrintHead Status" FontSize="14" FontWeight="Bold" 
                                  Foreground="Black" HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Using new PrintHeadPanel control -->
                    <Controls:PrintHeadPanel x:Name="PrintHeadPanel"
                                            Grid.Row="1"
                                            DefaultFlashParameters="0.1,1,1,1"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"/>
                </Grid>
            </Border>

            <!-- Right: Real-time Data (5) -->
            <Border Grid.Column="2" BorderBrush="#00E5FF" BorderThickness="2" 
                    Background="{DynamicResource Cyber.Bg.Panel}" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#00E5FF" Padding="8,4">
                        <TextBlock Text="Real-time Data" FontSize="14" FontWeight="Bold" 
                                  Foreground="Black" HorizontalAlignment="Center"/>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Column: Print Data -->
                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Text="Print Data" FontSize="11" FontWeight="Bold" 
                                          Foreground="#00E5FF" Margin="0,0,0,8"/>

                                <!-- Print Count -->
                                <Border BorderBrush="#4CAF50" BorderThickness="2" 
                                        CornerRadius="5" Padding="8" Margin="0,0,0,8"
                                        Background="{DynamicResource Plc.Bg.Main}" Height="79">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Text="Print Count" FontSize="10" 
                                                  Foreground="{DynamicResource Cyber.Text.Muted}" HorizontalAlignment="Center"/>

                                        <Controls:PlcLabel Grid.Row="1"
                                            Address="D1000"
                                            DefaultValue="0"
                                            DataType="DWord"
                                            ShowFrame="False"
                                            ShowAddress="False"
                                            ValueFontSize="24"
                                            ValueForeground="Success"
                                            ValueAlignment="Center"
                                            HorizontalAlignment="Stretch"
                                            Margin="0,3,0,0"/>
                                    </Grid>
                                </Border>

                                <Controls:PlcLabel 
                                    Label="Total"
                                    Address="D1010" 
                                    DefaultValue="0" 
                                    DataType="DWord"
                                    Height="56" Margin="0,0,0,6"
                                    HorizontalAlignment="Stretch"
                                    ValueFontSize="18"
                                    ValueAlignment="Center"
                                    LabelAlignment="Left"/>

                                <Controls:PlcLabel 
                                    Label="Success"
                                    Address="D1012" 
                                    DefaultValue="0" 
                                    DataType="DWord"
                                    Height="56" Margin="0,0,0,6"
                                    HorizontalAlignment="Stretch"
                                    ValueFontSize="18"
                                    ValueAlignment="Center"
                                    LabelAlignment="Left"/>

                                <Controls:PlcLabel 
                                    Label="Failed"
                                    Address="D1014" 
                                    DefaultValue="0" 
                                    DataType="DWord"
                                    Height="58"
                                    HorizontalAlignment="Stretch"
                                    ValueFontSize="18"
                                    ValueAlignment="Center"
                                    LabelAlignment="Left"/>
                            </StackPanel>

                            <!-- Right Column: Position Data -->
                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                <TextBlock Text="Position Data" FontSize="11" FontWeight="Bold" 
                                          Foreground="#00E5FF" Margin="0,0,0,8"/>

                                <Controls:PlcLabel 
                                    Label="X Position"
                                    Address="D100" 
                                    DefaultValue="0" 
                                    DataType="DWord"
                                    Height="56" Margin="0,0,0,6"
                                    HorizontalAlignment="Stretch"
                                    ValueFontSize="18"
                                    ValueAlignment="Center"
                                    LabelAlignment="Left"/>

                                <Controls:PlcLabel 
                                    Label="Y Position"
                                    Address="D102" 
                                    DefaultValue="0" 
                                    DataType="DWord"
                                    Height="58" Margin="0,0,0,6"
                                    HorizontalAlignment="Stretch"
                                    ValueFontSize="18"
                                    ValueAlignment="Center"
                                    LabelAlignment="Left"/>

                                <Controls:PlcLabel 
                                    Label="Z Position"
                                    Address="D104" 
                                    DefaultValue="0" 
                                    DataType="DWord"
                                    Height="64" Margin="0,0,0,6"
                                    HorizontalAlignment="Stretch"
                                    ValueFontSize="18"
                                    ValueAlignment="Center"
                                    LabelAlignment="Left"/>

                                <Controls:PlcLabel 
                                    Label="Temperature"
                                    Address="R2002" 
                                    DefaultValue="0.0" 
                                    DataType="Word"
                                    Divisor="10"
                                    StringFormat="F1"
                                    Height="60" Margin="0,0,0,6"
                                    HorizontalAlignment="Stretch"
                                    ValueFontSize="18"
                                    ValueAlignment="Center"
                                    LabelAlignment="Left"/>

                                <Controls:PlcLabel 
                                    Label="Status"
                                    Address="M237" 
                                    DefaultValue="OFF" 
                                    DataType="Bit"
                                    Height="45"
                                    HorizontalAlignment="Stretch"
                                    ValueFontSize="18"
                                    ValueAlignment="Center"
                                    LabelAlignment="Left"/>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom Section: 2 Columns (6 : 4) -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: System Log (6) -->
            <Border Grid.Column="0" BorderBrush="#00E5FF" BorderThickness="2" 
                    Background="{DynamicResource Cyber.Bg.Panel}" CornerRadius="5" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#00E5FF" Padding="8,4">
                        <TextBlock Text="System Log" FontSize="14" FontWeight="Bold" 
                                  Foreground="Black" HorizontalAlignment="Center"/>
                    </Border>

                    <Controls:LiveLogViewer Grid.Row="1" Margin="10"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch"/>
                </Grid>
            </Border>

            <!-- Right: Sensor Monitoring (4) -->
            <Border Grid.Column="1" BorderBrush="#00E5FF" BorderThickness="2" 
                    Background="{DynamicResource Cyber.Bg.Panel}" CornerRadius="5" Margin="5,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#00E5FF" Padding="8,4">
                        <TextBlock Text="Sensor Monitoring" FontSize="14" FontWeight="Bold" 
                                  Foreground="Black" HorizontalAlignment="Center"/>
                    </Border>

                    <Controls:SensorViewer Grid.Row="1" Margin="10"
                                          Title="Sensors"
                                          EnableGrouping="True"
                                          AutoStart="True"
                                          RefreshInterval="500"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"/>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</UserControl>
