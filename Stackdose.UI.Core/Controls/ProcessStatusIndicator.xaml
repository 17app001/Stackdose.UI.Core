<UserControl x:Class="Stackdose.UI.Core.Controls.ProcessStatusIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="60" d:DesignWidth="300">

    <UserControl.Resources>
        <!-- Rotating Animation for Spinner -->
        <Storyboard x:Key="SpinnerAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="SpinnerRotation"
                             Storyboard.TargetProperty="Angle"
                             From="0"
                             To="360"
                             Duration="0:0:1.5"/>
        </Storyboard>

        <!-- Pulsing Animation for Text -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetName="StatusText"
                             Storyboard.TargetProperty="Opacity"
                             From="1.0"
                             To="0.5"
                             Duration="0:0:1"/>
        </Storyboard>

        <!-- Paused Blinking Animation -->
        <Storyboard x:Key="PausedBlinkAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="StatusText"
                             Storyboard.TargetProperty="Opacity"
                             From="1.0"
                             To="0.3"
                             Duration="0:0:0.5"
                             AutoReverse="True"/>
        </Storyboard>
    </UserControl.Resources>

    <Border x:Name="RootBorder"
            Background="#1E1E2E"
            BorderBrush="#00BCD4"
            BorderThickness="2"
            CornerRadius="8"
            Padding="12,8"
            Visibility="Collapsed">
        <Border.Effect>
            <DropShadowEffect Color="#00BCD4" 
                              BlurRadius="15" 
                              ShadowDepth="0" 
                              Opacity="0.6"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Spinner Icon -->
            <Grid Grid.Column="0" 
                  Width="32" 
                  Height="32"
                  Margin="0,0,12,0"
                  VerticalAlignment="Center">
                <!-- Outer Ring -->
                <Ellipse x:Name="SpinnerOuter"
                         Width="32"
                         Height="32"
                         Stroke="#00BCD4"
                         StrokeThickness="3"
                         StrokeDashArray="8 4"
                         RenderTransformOrigin="0.5,0.5">
                    <Ellipse.RenderTransform>
                        <RotateTransform x:Name="SpinnerRotation" Angle="0"/>
                    </Ellipse.RenderTransform>
                </Ellipse>

                <!-- Inner Circle -->
                <Ellipse Width="12"
                         Height="12"
                         Fill="#00BCD4"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
            </Grid>

            <!-- Status Text -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="StatusText"
                           Text="Processing..."
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#00BCD4"
                           FontFamily="Consolas"
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="BatchNumberText"
                           Text="Batch: BATCH-001"
                           FontSize="12"
                           Foreground="#B0BEC5"
                           FontFamily="Consolas"
                           Margin="0,4,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
