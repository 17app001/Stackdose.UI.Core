<pages:BasePage x:Class="Wpf.Demo.Views.DemoHomePage"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:pages="clr-namespace:Stackdose.UI.Templates.Pages;assembly=Stackdose.UI.Templates"
                mc:Ignorable="d"
                d:DesignHeight="900" d:DesignWidth="1600"
                PageTitle="Demo Home Page"
                LogoutRequested="OnLogout"
                NavigationRequested="OnNavigate">

    <pages:BasePage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Stackdose.UI.Templates;component/Resources/CommonColors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </pages:BasePage.Resources>

    <!-- Main Content Area -->
    <pages:BasePage.ContentArea>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Welcome Section -->
                <Border Grid.Row="0"
                        Background="{StaticResource CardBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="2"
                        CornerRadius="10"
                        Padding="30"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Welcome to Stackdose UI Templates Demo!" 
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="This page demonstrates how to use the BasePage template with all shared components." 
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   MaxWidth="800"/>
                    </StackPanel>
                </Border>

                <!-- Features Grid -->
                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Feature 1: Shared Header -->
                    <Border Grid.Column="0"
                            Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="{StaticResource SuccessBrush}"
                            BorderThickness="2"
                            CornerRadius="10"
                            Padding="20"
                            Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="??" 
                                       FontSize="48"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Shared Header" 
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource SuccessBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Logo, System Title, Page Title, and User Info" 
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Feature 2: Navigation -->
                    <Border Grid.Column="1"
                            Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="{StaticResource InfoBrush}"
                            BorderThickness="2"
                            CornerRadius="10"
                            Padding="20"
                            Margin="5,0">
                        <StackPanel>
                            <TextBlock Text="??" 
                                       FontSize="48"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Navigation Menu" 
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource InfoBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Customizable left navigation with selection state" 
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Feature 3: Bottom Bar -->
                    <Border Grid.Column="2"
                            Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="{StaticResource WarningBrush}"
                            BorderThickness="2"
                            CornerRadius="10"
                            Padding="20"
                            Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock Text="??" 
                                       FontSize="48"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Bottom Bar" 
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource WarningBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Version info, date/time, and copyright" 
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Demo Buttons Section -->
                <Border Grid.Row="2"
                        Background="{StaticResource DarkBackgroundBrush}"
                        BorderBrush="{StaticResource BorderSecondaryBrush}"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Interactive Demo" 
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Try these interactions:" 
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center">
                            <!-- Demo Button 1 -->
                            <Button Content="Click Me!" 
                                    Width="150"
                                    Height="45"
                                    Background="{StaticResource SuccessBrush}"
                                    Foreground="{StaticResource TextPrimaryBrush}"
                                    BorderThickness="0"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Cursor="Hand"
                                    Margin="10"
                                    Click="DemoButton_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="8"
                                                            BorderThickness="0">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#27ae60"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- Navigation Test Button -->
                            <Button Content="Test Navigation" 
                                    Width="150"
                                    Height="45"
                                    Background="{StaticResource InfoBrush}"
                                    Foreground="{StaticResource TextPrimaryBrush}"
                                    BorderThickness="0"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Cursor="Hand"
                                    Margin="10">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="8"
                                                            BorderThickness="0">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2980b9"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- Logout Test Button -->
                            <Button Content="Try Logout (Top Right)" 
                                    Width="200"
                                    Height="45"
                                    Background="{StaticResource WarningBrush}"
                                    Foreground="{StaticResource TextPrimaryBrush}"
                                    BorderThickness="0"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Cursor="Hand"
                                    Margin="10"
                                    IsEnabled="False"
                                    Opacity="0.6">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="8"
                                                            BorderThickness="0">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>

                        <TextBlock Text="?? Tip: Try clicking items in the left navigation menu!" 
                                   FontSize="12"
                                   Foreground="{StaticResource TextTertiaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,15,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Color Palette Display -->
                <Border Grid.Row="3"
                        Background="{StaticResource CardBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="2"
                        CornerRadius="10"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Color System Preview" 
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Primary Color -->
                            <StackPanel Grid.Column="0" Margin="10">
                                <Border Background="{StaticResource PrimaryBrush}"
                                        Height="80"
                                        CornerRadius="8"
                                        Margin="0,0,0,10"/>
                                <TextBlock Text="Primary" 
                                           FontSize="12"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="#00d4ff" 
                                           FontSize="10"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Success Color -->
                            <StackPanel Grid.Column="1" Margin="10">
                                <Border Background="{StaticResource SuccessBrush}"
                                        Height="80"
                                        CornerRadius="8"
                                        Margin="0,0,0,10"/>
                                <TextBlock Text="Success" 
                                           FontSize="12"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="#2ecc71" 
                                           FontSize="10"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Warning Color -->
                            <StackPanel Grid.Column="2" Margin="10">
                                <Border Background="{StaticResource WarningBrush}"
                                        Height="80"
                                        CornerRadius="8"
                                        Margin="0,0,0,10"/>
                                <TextBlock Text="Warning" 
                                           FontSize="12"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="#f39c12" 
                                           FontSize="10"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Error Color -->
                            <StackPanel Grid.Column="3" Margin="10">
                                <Border Background="{StaticResource ErrorBrush}"
                                        Height="80"
                                        CornerRadius="8"
                                        Margin="0,0,0,10"/>
                                <TextBlock Text="Error" 
                                           FontSize="12"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="#e74c3c" 
                                           FontSize="10"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </pages:BasePage.ContentArea>
</pages:BasePage>
