<UserControl x:Class="WpfApp.Demo.Views.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Welcome Section -->
            <Border Grid.Row="0"
                    Background="{StaticResource CardBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="30"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="?? Home Dashboard"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Welcome to the Stackdose 3D Printing Control System"
                               FontSize="16"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- System Status Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Current Process -->
                <Border Grid.Column="0"
                        Background="{StaticResource CardBackgroundBrush}"
                        BorderBrush="{StaticResource SuccessBrush}"
                        BorderThickness="2"
                        CornerRadius="10"
                        Padding="20"
                        Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Current Process"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource SuccessBrush}"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="Standby"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="Ready for operation"
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Today's Production -->
                <Border Grid.Column="1"
                        Background="{StaticResource CardBackgroundBrush}"
                        BorderBrush="{StaticResource InfoBrush}"
                        BorderThickness="2"
                        CornerRadius="10"
                        Padding="20"
                        Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="Today's Production"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource InfoBrush}"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="0 tablets"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="No production yet"
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>

                <!-- System Alerts -->
                <Border Grid.Column="2"
                        Background="{StaticResource CardBackgroundBrush}"
                        BorderBrush="{StaticResource WarningBrush}"
                        BorderThickness="2"
                        CornerRadius="10"
                        Padding="20"
                        Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="System Alerts"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource WarningBrush}"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="0 alerts"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource SuccessBrush}"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="All systems normal"
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Quick Actions -->
            <Border Grid.Row="2"
                    Background="{StaticResource DarkBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="30">
                <StackPanel>
                    <TextBlock Text="Quick Actions"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,20"/>

                    <TextBlock Text="Navigate to different sections using the left menu:"
                               FontSize="14"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="? Machine Page - Monitor 3D printer status"
                                       FontSize="12"
                                       Foreground="{StaticResource TextTertiaryBrush}"
                                       Margin="0,5"/>
                            <TextBlock Text="? Log Viewer - View system logs"
                                       FontSize="12"
                                       Foreground="{StaticResource TextTertiaryBrush}"
                                       Margin="0,5"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="? User Management - Manage user accounts"
                                       FontSize="12"
                                       Foreground="{StaticResource TextTertiaryBrush}"
                                       Margin="0,5"/>
                            <TextBlock Text="? System Settings - Configure system"
                                       FontSize="12"
                                       Foreground="{StaticResource TextTertiaryBrush}"
                                       Margin="0,5"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
