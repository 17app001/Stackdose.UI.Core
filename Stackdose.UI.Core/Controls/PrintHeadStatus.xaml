<UserControl x:Class="Stackdose.UI.Core.Controls.PrintHeadStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             x:Name="root"
             Width="280" Height="180"
             d:DesignHeight="180" d:DesignWidth="280">

    <Border Background="{DynamicResource Plc.Bg.Dark}" 
            BorderBrush="{DynamicResource Plc.Border}" 
            BorderThickness="1" 
            CornerRadius="8"
            Padding="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="{Binding HeadName, ElementName=root, FallbackValue='PrintHead 1'}" 
                           FontSize="14" 
                           FontWeight="Bold"
                           Foreground="{DynamicResource Plc.Text.Label}"/>

                <TextBlock x:Name="StatusText" 
                           Grid.Column="1"
                           Text="DISCONNECTED" 
                           FontSize="11" 
                           FontWeight="Bold"
                           Foreground="#ff4757"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- Connection Info & Temperatures -->
            <Border Grid.Row="2" 
                    Background="{DynamicResource Plc.Bg.Main}" 
                    BorderBrush="{DynamicResource Plc.Border}" 
                    BorderThickness="1" 
                    CornerRadius="5"
                    Padding="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Config File -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <TextBlock Text="Config:" 
                                   FontSize="11" 
                                   Foreground="Gray" 
                                   Margin="0,0,5,0"/>
                        <TextBlock x:Name="ConfigFileText" 
                                   Text="N/A" 
                                   FontSize="11" 
                                   Foreground="{DynamicResource Plc.Text.Value}"/>
                    </StackPanel>

                    <!-- Board IP:Port -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                        <TextBlock Text="Board:" 
                                   FontSize="11" 
                                   Foreground="Gray" 
                                   Margin="0,0,5,0"/>
                        <TextBlock x:Name="BoardAddressText" 
                                   Text="N/A" 
                                   FontSize="11" 
                                   Foreground="{DynamicResource Plc.Text.Value}"/>
                    </StackPanel>

                    <!-- Model -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal">
                        <TextBlock Text="Model:" 
                                   FontSize="11" 
                                   Foreground="Gray" 
                                   Margin="0,0,5,0"/>
                        <TextBlock x:Name="ModelText" 
                                   Text="N/A" 
                                   FontSize="11" 
                                   Foreground="{DynamicResource Plc.Text.Value}"/>
                    </StackPanel>

                    <!-- Temperatures -->
                    <Border Grid.Row="6" 
                            Background="{DynamicResource Plc.Bg.Dark}" 
                            BorderBrush="{DynamicResource Plc.Border}" 
                            BorderThickness="1" 
                            CornerRadius="4"
                            Padding="6"
                            Margin="0,5,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="3"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="??? Temperatures" 
                                       FontSize="10" 
                                       Foreground="Gray"
                                       HorizontalAlignment="Center"/>

                            <ItemsControl x:Name="TemperaturesPanel" 
                                          Grid.Row="2"
                                          HorizontalAlignment="Center">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#16213e" 
                                                BorderBrush="#2c3e50" 
                                                BorderThickness="1" 
                                                CornerRadius="3"
                                                Padding="4,2"
                                                Margin="2">
                                            <TextBlock Text="{Binding}" 
                                                       FontSize="11" 
                                                       Foreground="#00d4ff" 
                                                       FontWeight="Bold"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Buttons -->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="ConnectButton" 
                        Grid.Column="0"
                        Content="Connect" 
                        Background="#2ecc71" 
                        Foreground="White"
                        BorderBrush="#27ae60"
                        Height="32"
                        FontWeight="Bold"
                        Click="ConnectButton_Click"
                        Style="{DynamicResource ModernButtonStyle}"/>

                <Button x:Name="DisconnectButton" 
                        Grid.Column="2"
                        Content="Disconnect" 
                        Background="#e74c3c" 
                        Foreground="White"
                        BorderBrush="#c0392b"
                        Height="32"
                        FontWeight="Bold"
                        Click="DisconnectButton_Click"
                        IsEnabled="False"
                        Style="{DynamicResource ModernButtonStyle}"/>
            </Grid>
        </Grid>
    </Border>

    <UserControl.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
</UserControl>
