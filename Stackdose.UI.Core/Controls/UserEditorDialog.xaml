<Window x:Class="Stackdose.UI.Core.Controls.UserEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d"
        Title="User Editor" 
        Height="550" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Cyber.Bg.Dark}"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="CyberTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource Cyber.Bg.Panel}"/>
            <Setter Property="Foreground" Value="{DynamicResource Cyber.Text.Bright}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Cyber.Border.Strong}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="CyberPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="{DynamicResource Cyber.Bg.Panel}"/>
            <Setter Property="Foreground" Value="{DynamicResource Cyber.Text.Bright}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Cyber.Border.Strong}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- ComboBox Style with Item Colors -->
        <Style x:Key="CyberComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource Cyber.Bg.Panel}"/>
            <Setter Property="Foreground" Value="{DynamicResource Cyber.Text.Bright}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Cyber.Border.Strong}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Focusable="false"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Name="ContentSite"
                                                    Grid.Column="0"
                                                    IsHitTestVisible="False"
                                                    Content="{TemplateBinding SelectionBoxItem}"
                                                    ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                    ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                    Margin="10,8"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left">
                                        <ContentPresenter.Resources>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{DynamicResource Cyber.Text.Bright}"/>
                                            </Style>
                                        </ContentPresenter.Resources>
                                    </ContentPresenter>
                                    <Path Grid.Column="1"
                                        Data="M 0 0 L 4 4 L 8 0 Z"
                                        Fill="{DynamicResource Cyber.Text.Bright}"
                                        VerticalAlignment="Center"
                                        Margin="0,0,10,0"/>
                                </Grid>
                            </ToggleButton>
                            <Popup Name="Popup"
                                 Placement="Bottom"
                                 IsOpen="{TemplateBinding IsDropDownOpen}"
                                 AllowsTransparency="True"
                                 Focusable="False"
                                 PopupAnimation="Slide">
                                <Grid Name="DropDown"
                                    SnapsToDevicePixels="True"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border Background="{DynamicResource Cyber.Bg.Panel}"
                                          BorderBrush="{DynamicResource Cyber.Border.Strong}"
                                          BorderThickness="1">
                                        <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="{DynamicResource Cyber.Bg.Panel}"/>
                        <Setter Property="Foreground" Value="{DynamicResource Cyber.Text.Bright}"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border Name="Border"
                                          Background="{TemplateBinding Background}"
                                          BorderThickness="0"
                                          Padding="{TemplateBinding Padding}">
                                        <ContentPresenter>
                                            <ContentPresenter.Resources>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ComboBoxItem}}"/>
                                                </Style>
                                            </ContentPresenter.Resources>
                                        </ContentPresenter>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource Cyber.NeonBlue}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource Cyber.NeonBlue}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="{DynamicResource Cyber.NeonBlue}" BorderThickness="2" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="{DynamicResource Cyber.Bg.Panel}"
                    CornerRadius="6,6,0,0"
                    Padding="20,15"
                    BorderBrush="{DynamicResource Cyber.Border.Strong}"
                    BorderThickness="0,0,0,2">
                <TextBlock x:Name="TitleText"
                         Text="Add User"
                         Foreground="{DynamicResource Cyber.NeonBlue}"
                         FontSize="18"
                         FontWeight="Bold"/>
            </Border>

            <ScrollViewer Grid.Row="1" 
                        VerticalScrollBarVisibility="Auto"
                        Padding="20">
                <StackPanel>
                    <TextBlock Text="User ID *" 
                             Foreground="{DynamicResource Cyber.Text.Bright}"
                             FontSize="12"
                             FontWeight="Medium"
                             Margin="0,0,0,5"/>
                    <TextBox x:Name="UserIdTextBox"
                           Style="{StaticResource CyberTextBoxStyle}"
                           Margin="0,0,0,15"/>

                    <TextBlock Text="Display Name *" 
                             Foreground="{DynamicResource Cyber.Text.Bright}"
                             FontSize="12"
                             FontWeight="Medium"
                             Margin="0,0,0,5"/>
                    <TextBox x:Name="DisplayNameTextBox"
                           Style="{StaticResource CyberTextBoxStyle}"
                           Margin="0,0,0,15"/>

                    <TextBlock x:Name="PasswordLabel"
                             Text="Password *" 
                             Foreground="{DynamicResource Cyber.Text.Bright}"
                             FontSize="12"
                             FontWeight="Medium"
                             Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox"
                               Style="{StaticResource CyberPasswordBoxStyle}"
                               Margin="0,0,0,15"/>

                    <!-- Confirm Password Field -->
                    <TextBlock x:Name="ConfirmPasswordLabel"
                             Text="Confirm Password *" 
                             Foreground="{DynamicResource Cyber.Text.Bright}"
                             FontSize="12"
                             FontWeight="Medium"
                             Margin="0,0,0,5"/>
                    <PasswordBox x:Name="ConfirmPasswordBox"
                               Style="{StaticResource CyberPasswordBoxStyle}"
                               Margin="0,0,0,15"/>

                    <TextBlock Text="Access Level *" 
                             Foreground="{DynamicResource Cyber.Text.Bright}"
                             FontSize="12"
                             FontWeight="Medium"
                             Margin="0,0,0,5"/>
                    <ComboBox x:Name="AccessLevelComboBox"
                            Style="{StaticResource CyberComboBoxStyle}"
                            Margin="0,0,0,15"/>

                    <TextBlock Text="Email" 
                             Foreground="{DynamicResource Cyber.Text.Bright}"
                             FontSize="12"
                             FontWeight="Medium"
                             Margin="0,0,0,5"/>
                    <TextBox x:Name="EmailTextBox"
                           Style="{StaticResource CyberTextBoxStyle}"
                           Margin="0,0,0,15"/>

                    <TextBlock Text="Department" 
                             Foreground="{DynamicResource Cyber.Text.Bright}"
                             FontSize="12"
                             FontWeight="Medium"
                             Margin="0,0,0,5"/>
                    <TextBox x:Name="DepartmentTextBox"
                           Style="{StaticResource CyberTextBoxStyle}"
                           Margin="0,0,0,15"/>

                    <TextBlock Text="Remarks" 
                             Foreground="{DynamicResource Cyber.Text.Bright}"
                             FontSize="12"
                             FontWeight="Medium"
                             Margin="0,0,0,5"/>
                    <TextBox x:Name="RemarksTextBox"
                           Style="{StaticResource CyberTextBoxStyle}"
                           AcceptsReturn="True"
                           Height="60"
                           TextWrapping="Wrap"
                           Margin="0,0,0,15"/>
                </StackPanel>
            </ScrollViewer>

            <Border Grid.Row="2"
                    Background="{DynamicResource Cyber.Bg.Panel}"
                    CornerRadius="0,0,6,6"
                    Padding="20,15"
                    BorderBrush="{DynamicResource Cyber.Border.Strong}"
                    BorderThickness="0,2,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="OK"
                          Width="100"
                          Height="35"
                          Background="{DynamicResource Cyber.NeonBlue}"
                          Foreground="White"
                          FontWeight="Medium"
                          Click="OkButton_Click"
                          Margin="0,0,10,0"/>
                    <Button Content="Cancel"
                          Width="100"
                          Height="35"
                          Background="#607D8B"
                          Foreground="White"
                          FontWeight="Medium"
                          Click="CancelButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
