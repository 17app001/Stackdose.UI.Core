<UserControl x:Class="WpfApp1.Panels.RecipeLogPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Controls="http://schemas.stackdose.com/wpf"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Recipe Management Area -->
        <Border Grid.Column="0" 
                BorderBrush="#4CAF50" BorderThickness="2" 
                Background="#1A1A2E" Padding="10"
                Margin="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Recipe Management" 
                           FontSize="18" FontWeight="Bold" 
                           Foreground="#4CAF50" 
                           Margin="0,0,0,10"/>

                <Controls:RecipeLoader Grid.Row="1"
                                       Title="Recipe Manager"
                                       RecipeFilePath="Resources/Recipe.json"
                                       RequiredAccessLevel="Instructor"
                                       ShowDetails="True"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch"/>
            </Grid>
        </Border>

        <!-- Live Log Viewer Area -->
        <Border Grid.Column="1" 
                BorderBrush="#00E5FF" BorderThickness="2" 
                Background="#1A1A2E" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="System Logs" 
                           FontSize="18" FontWeight="Bold" 
                           Foreground="#00E5FF" 
                           Margin="0,0,0,10"/>

                <Controls:LiveLogViewer Grid.Row="1"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"/>
            </Grid>
        </Border>

    </Grid>
</UserControl>
