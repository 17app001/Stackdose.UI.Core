<UserControl x:Class="Stackdose.UI.Core.Controls.PlcLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="200"
             ToolTip="{Binding Address, RelativeSource={RelativeSource Self}}"
             Foreground="#00A8E8">
    <!-- 1. 將預設藍色設定在這裡 (作為 UserControl 的預設值) -->

    <Border BorderBrush="#333" BorderThickness="1" Background="#1E1E1E" CornerRadius="4" Padding="10,5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 標題與位址 -->
            <Grid Grid.Row="0" Margin="0,0,0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           Foreground="#AAA" FontSize="12"/>

                <TextBlock Text="{Binding Address, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           Foreground="#555" FontSize="10" VerticalAlignment="Center"/>
            </Grid>

            <!-- 數值顯示 -->
            <!-- 2. 這裡原本的 Foreground="#00A8E8" 必須移除！ -->
            <!-- 3. 改為 Binding，這樣它才會跟著 UserControl 的 Foreground 變化 -->
            <TextBlock Grid.Row="1" 
                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="20" FontWeight="Bold" FontFamily="Consolas"
                       HorizontalAlignment="Right" VerticalAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <!-- 正常顯示數值 -->
                        <Setter Property="Text" Value="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue='-'}"/>

                        <!-- 當數值無效時顯示預設文字 (例如 0000) -->
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="-">
                                <Setter Property="Text" Value="{Binding DefaultValue, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Null}">
                                <Setter Property="Text" Value="{Binding DefaultValue, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
    </Border>
</UserControl>