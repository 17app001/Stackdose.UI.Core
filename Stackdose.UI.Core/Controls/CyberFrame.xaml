<UserControl x:Class="Stackdose.UI.Core.Controls.CyberFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             x:Name="Root">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Stackdose.UI.Core;component/Themes/Colors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <!-- Main Window Frame -->
    <Border Background="{StaticResource Cyber.Bg.Dark}" 
            BorderBrush="{StaticResource Cyber.Border}" 
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <!-- Reduced Header Height: 70 -> 50 -->
                <RowDefinition Height="*"/>
                <!-- Content Area -->
            </Grid.RowDefinitions>

            <!-- Header Bar -->
            <Border Grid.Row="0" 
                    Background="{StaticResource Cyber.Bg.Panel}" 
                    BorderBrush="{StaticResource Cyber.Border.Strong}" 
                    BorderThickness="0,0,0,2">
                <!-- 邊框加粗從 1 -> 2，使用更明顯的顏色 -->
                <Grid Margin="15,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- ========== LEFT SECTION: Logo + Title ========== -->
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center">
                        <TextBlock Text="Stackdose" 
                                   Foreground="{StaticResource Cyber.NeonBlue}" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   FontStyle="Italic" 
                                   Margin="0,0,8,0"/>
                        <!-- 增加字體大小 18->20 -->
                        <TextBlock Text="ModelS" 
                                   Foreground="{StaticResource Cyber.NeonBlue}" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   FontStyle="Italic" 
                                   Margin="0,0,8,0"/>
                        <!-- 增加字體大小 18->20 -->
                        <TextBlock Text="{Binding Title, ElementName=Root}" 
                                   Foreground="{StaticResource Cyber.Text.Bright}" 
                                   FontSize="14" 
                                   FontWeight="Medium"
                                   VerticalAlignment="Center" 
                                   Margin="0,0,0,0"/>
                        <!-- 使用更亮的文字顏色，增加字體大小 13->14，加粗 -->
                    </StackPanel>

                    <!-- ========== CENTER SECTION: Status Indicators (Optional) ========== -->
                    <StackPanel x:Name="StatusIndicatorsPanel"
                                Grid.Column="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Visibility="Collapsed">
                        <!-- Alarm Indicator -->
                        <Border Background="#F44336" 
                                CornerRadius="4" 
                                Padding="8,4" 
                                Margin="5"
                                BorderBrush="#FFFFFF"
                                BorderThickness="1">
                            <!-- 加上白色邊框，增加視覺辨識 -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="[!]" 
                                           Foreground="White" 
                                           FontSize="12" 
                                           FontWeight="Bold"
                                           Margin="0,0,5,0"/>
                                <!-- 增加字體大小和粗細 -->
                                <TextBlock Text="Alarm: 0" 
                                           Foreground="White" 
                                           FontSize="11" 
                                           FontWeight="Medium"/>
                                <!-- 增加字體大小 -->
                            </StackPanel>
                        </Border>

                        <!-- Total Indicator -->
                        <Border Background="#4CAF50" 
                                CornerRadius="4" 
                                Padding="8,4" 
                                Margin="5"
                                BorderBrush="#FFFFFF"
                                BorderThickness="1">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="[v]" 
                                           Foreground="White" 
                                           FontSize="12" 
                                           FontWeight="Bold"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="Total: 10" 
                                           Foreground="White" 
                                           FontSize="11" 
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- ========== RIGHT SECTION: User Info + Time + Logout ========== -->
                    <StackPanel Grid.Column="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center">
                        
                        <!-- Time Display -->
                        <TextBlock x:Name="TimeText" 
                                   Text="00:00:00" 
                                   Foreground="{StaticResource Cyber.NeonBlue}" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   FontFamily="Consolas"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>

                        <!-- Separator -->
                        <TextBlock Text="|" 
                                   Foreground="{StaticResource Cyber.Border.Strong}" 
                                   FontSize="14" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>

                        <!-- User Info Display -->
                        <StackPanel Orientation="Horizontal" 
                                    VerticalAlignment="Center"
                                    Margin="0,0,15,0">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock x:Name="UserNameText" 
                                           Text="Engineer" 
                                           Foreground="{StaticResource Cyber.Text.Bright}" 
                                           FontSize="13" 
                                           FontWeight="SemiBold"/>
                                <TextBlock x:Name="UserLevelText" 
                                           Text="Engineer" 
                                           Foreground="{StaticResource Cyber.NeonBlue}" 
                                           FontSize="10"
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Logout Button -->
                        <Button x:Name="LogoutButton" 
                                Click="LogoutButton_Click"
                                Width="36" 
                                Height="36" 
                                Background="#FF5252" 
                                BorderBrush="#FFFFFF"
                                BorderThickness="2"
                                Cursor="Hand"
                                ToolTip="Logout">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FF5252"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="4">
                                                    <TextBlock Text="⏻" 
                                                               Foreground="White" 
                                                               FontSize="16" 
                                                               HorizontalAlignment="Center" 
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E53935"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content Area -->
            <ContentPresenter Grid.Row="1" Margin="10"/>
        </Grid>
    </Border>
</UserControl>