<UserControl x:Class="WpfApp.Demo.Views.LogViewerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Log Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource CardBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="30"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="System Log Viewer"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Monitor system activities and troubleshoot issues"
                               FontSize="16"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Log Content -->
            <Border Grid.Row="1"
                    Background="{StaticResource DarkBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="30">
                <StackPanel>
                    <TextBlock Text="Log Entries"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,20"/>

                    <TextBlock Text="[14:30:15] [INFO] System initialized successfully"
                               FontSize="12"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontFamily="Consolas"
                               Margin="0,5"/>
                    <TextBlock Text="[14:30:12] [SUCCESS] Database connection established"
                               FontSize="12"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontFamily="Consolas"
                               Margin="0,5"/>
                    <TextBlock Text="[14:30:10] [WARNING] Material level low"
                               FontSize="12"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontFamily="Consolas"
                               Margin="0,5"/>
                    <TextBlock Text="[14:30:08] [ERROR] Communication timeout"
                               FontSize="12"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontFamily="Consolas"
                               Margin="0,5"/>
                    <TextBlock Text="[14:30:05] [INFO] User login successful"
                               FontSize="12"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontFamily="Consolas"
                               Margin="0,5"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
