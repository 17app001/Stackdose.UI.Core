<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf.Demo"
        xmlns:Custom="http://schemas.stackdose.com/wpf" x:Class="Wpf.Demo.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Width="1200" Height="800" >
    <Grid>
        <!-- CyberFrame 現在預設就會自動填滿 -->
        <Custom:CyberFrame Title="MODEL-S"/>

        <!-- PlcStatus 放在左上角 -->
        <Custom:PlcStatus HorizontalAlignment="Left"                    
                         VerticalAlignment="Top" 
                         Margin="21,66,0,0" 
                         IpAddress="192.168.22.39" 
                         Port="3000" Width="261" Height="76" AutoConnect="False"/>

        <!-- PlcLabel 完整樣式展示 -->
        <StackPanel HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="582,90,0,0"
                   Width="250">

            <TextBlock Text="PlcLabel 樣式展示" 
                      Foreground="{DynamicResource Cyber.NeonBlue}" 
                      FontSize="14" 
                      FontWeight="Bold" 
                      Margin="0,0,0,10"/>

            <!-- 1. 預設樣式 -->

            <!-- 2. 標籤置中 -->

            <!-- 3. 標籤靠右 -->

            <!-- 4. 成功色（綠色）-->
            <Custom:PlcLabel Label="X軸位置" 
                            Address="D65" 
                            LabelForeground="Success"
                            ValueForeground="Success"
                            Margin="0,0,0,5" DataType="DWord"/>

            <!-- 5. 警告色（橙色）-->
            <Custom:PlcLabel Label="警告狀態" 
                            Address="D500" 
                            LabelForeground="Warning"
                            ValueForeground="Warning"
                            Margin="0,0,0,5"/>

            <!-- 6. 錯誤色（紅色）-->
            <Custom:PlcLabel Label="錯誤狀態" 
                            Address="D600" 
                            LabelForeground="Error"
                            ValueForeground="Error"
                            Margin="0,0,0,5"/>

            <!-- 7. 資訊色（青色）-->
            <Custom:PlcLabel Label="資訊顯示" 
                            Address="D700" 
                            LabelForeground="Info"
                            ValueForeground="Info"
                            Margin="0,0,0,5"/>

            <!-- 8. 組合應用：大字+置中+白色 -->
            <Custom:PlcLabel Label="重要數值" 
                            Address="D800" 
                            LabelAlignment="Center"
                            LabelFontSize="16"
                            ValueFontSize="28"
                            LabelForeground="White"
                            ValueForeground="NeonBlue"
                            Margin="0,0,0,5"/>

            <!-- 9. 無框+自訂顏色 -->
            <Custom:PlcLabel Label="簡潔模式" 
                            Address="D900" 
                            ShowFrame="False"
                            LabelAlignment="Right"
                            LabelForeground="Gray"
                            ValueForeground="Primary"/>
        </StackPanel>

        <!-- PlcLabel 對齊方式展示 -->

        <!-- PlcLabel 顯示位址範例 -->

        <!-- PlcLabel 形狀展示 -->

        <!-- PlcLabel 完整樣式展示 -->
        <StackPanel HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="305,66,0,0"
                   Width="350">

            <!-- 矩形底框顏色展示 -->

            <!-- 圓形底框顏色展示 -->
        </StackPanel>

        <Custom:PlcDeviceEditor HorizontalAlignment="Left" Margin="21,173,0,0" VerticalAlignment="Top" Width="372"/>
        <Custom:LiveLogViewer HorizontalAlignment="Left" Margin="21,376,0,0" VerticalAlignment="Top" Height="243" Width="372"/>

        <!-- 🔥 測試按鈕 -->

        <Custom:PlcLabel HorizontalAlignment="Left" Margin="917,173,0,0" VerticalAlignment="Top" 
                        Height="164" Width="166" 
                        ValueAlignment="Center" 
                        LabelAlignment="Center" 
                        LabelFontSize="44" 
                        Label="溫度" 
                        ValueFontSize="33" 
                        DefaultValue="000" 
                        Divisor="10" 
                        ShowAddress="False" 
                        ShowFrame="True"
                        FrameBackground="DarkBlue"
                        LabelForeground="Warning"
                        ValueForeground="Warning" 
                        FrameShape="Circle"/>
    </Grid>
</Window>
