<UserControl x:Class="Stackdose.UI.Templates.Pages.BasePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:Stackdose.UI.Templates.Controls"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1600"
             Background="{DynamicResource Cyber.Bg.Dark}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Stackdose.UI.Core;component/Themes/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

<Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <controls:AppHeader Grid.Row="0"
                           PageTitle="{Binding PageTitle, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           LogoutClicked="AppHeader_LogoutClicked"
                           SwitchUserClicked="AppHeader_SwitchUserClicked"
                           MinimizeClicked="AppHeader_MinimizeClicked"
                           CloseClicked="AppHeader_CloseClicked"/>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Navigation -->
            <controls:LeftNavigation Grid.Column="0"
                                    NavigationRequested="LeftNavigation_NavigationRequested"/>

            <!-- Content Area -->
            <Border Grid.Column="1" 
                    Background="{DynamicResource Cyber.Bg.Panel}"
                    BorderBrush="{DynamicResource Cyber.Border}"
                    BorderThickness="1,0,0,0">
                <ContentPresenter Content="{Binding ContentArea, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            </Border>
        </Grid>

        <!-- Bottom Bar -->
        <controls:AppBottomBar Grid.Row="2"/>
    </Grid>
</UserControl>


