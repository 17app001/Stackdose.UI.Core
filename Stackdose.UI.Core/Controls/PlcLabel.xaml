<UserControl x:Class="Stackdose.UI.Core.Controls.PlcLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="200">

    <Border BorderBrush="#333" BorderThickness="1" Background="#1E1E1E" CornerRadius="4" Padding="10,5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 標題與位址 -->
            <Grid Grid.Row="0" Margin="0,0,0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 顯示中文標題 (例如: X軸位置) -->
                <TextBlock Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           Foreground="#AAA" FontSize="12"/>

                <!-- 顯示 PLC 位址 (例如: D100) -->
                <TextBlock Text="{Binding Address, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           Foreground="#555" FontSize="10" VerticalAlignment="Center" Visibility="Hidden"/>
            </Grid>

            <!-- 數值顯示 -->
            <TextBlock Grid.Row="1" 
                       Foreground="#00A8E8" FontSize="20" FontWeight="Bold" FontFamily="Consolas"
                       HorizontalAlignment="Right" VerticalAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <!-- 預設顯示 Value -->
                        <Setter Property="Text" Value="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue='-'}"/>
                        <Style.Triggers>
                            <!-- 當 Value 為初始值 "-" 時，顯示 DefaultValue 以便對齊 -->
                            <DataTrigger Binding="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="-">
                                <Setter Property="Text" Value="{Binding DefaultValue, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                            </DataTrigger>
                            <!-- 當 Value 為 null 時，也顯示 DefaultValue -->
                            <DataTrigger Binding="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Null}">
                                <Setter Property="Text" Value="{Binding DefaultValue, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
    </Border>
</UserControl>