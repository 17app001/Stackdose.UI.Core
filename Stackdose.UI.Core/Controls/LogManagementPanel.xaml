<UserControl x:Class="Stackdose.UI.Core.Controls.LogManagementPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="1400"
             d:DesignHeight="900">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Stackdose.UI.Core;component/Themes/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

            <Style x:Key="DateItemStyle" TargetType="Border">
                <Setter Property="Background" Value="{DynamicResource Plc.Bg.Main}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource Plc.Border}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="12"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource Sensor.Bg.Header}"/>
                        <Setter Property="BorderBrush" Value="{DynamicResource Cyber.NeonBlue}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="LogCardStyle" TargetType="Border">
                <Setter Property="Background" Value="{DynamicResource Log.Bg.Main}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource Log.Border}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16"/>
                <Setter Property="Margin" Value="0,0,0,12"/>
            </Style>

            <Style x:Key="TypeBadgeStyle" TargetType="Border">
                <Setter Property="CornerRadius" Value="4"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{DynamicResource Cyber.Bg.Dark}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="{DynamicResource Plc.Bg.Main}"
                BorderBrush="{DynamicResource Plc.Border}"
                BorderThickness="1"
                CornerRadius="6"
                Padding="16"
                Margin="16,16,16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <ToggleButton Content="AUDIT TRAIL"
                                  Background="#E85B4A"
                                  IsChecked="{Binding IsAuditTrailMode}"
                                  Click="AuditTrailButton_Click"
                                  Width="130"
                                  Height="32"
                                  Margin="0,0,8,0"
                                  Foreground="White"
                                  FontWeight="Bold"
                                  FontSize="11"
                                  FontFamily="Consolas"/>
                    
                    <ToggleButton Content="OPERATION"
                                  Background="#3AA0FF"
                                  IsChecked="{Binding IsOperationMode}"
                                  Click="OperationButton_Click"
                                  Width="130"
                                  Height="32"
                                  Margin="0,0,8,0"
                                  Foreground="White"
                                  FontWeight="Bold"
                                  FontSize="11"
                                  FontFamily="Consolas"/>
                    
                    <ToggleButton Content="EVENT"
                                  Background="#FFB020"
                                  IsChecked="{Binding IsEventMode}"
                                  Click="EventButton_Click"
                                  Width="130"
                                  Height="32"
                                  Margin="0,0,8,0"
                                  Foreground="White"
                                  FontWeight="Bold"
                                  FontSize="11"
                                  FontFamily="Consolas"/>
                    
                    <ToggleButton Content="PERIODIC DATA"
                                  Background="#3AC977"
                                  IsChecked="{Binding IsPeriodicDataMode}"
                                  Click="PeriodicDataButton_Click"
                                  Width="130"
                                  Height="32"
                                  Margin="0,0,24,0"
                                  Foreground="White"
                                  FontWeight="Bold"
                                  FontSize="11"
                                  FontFamily="Consolas"/>

                    <TextBlock Text="FROM"
                               Foreground="{DynamicResource Plc.Text.Label}"
                               VerticalAlignment="Center"
                               FontSize="11"
                               FontWeight="Bold"
                               FontFamily="Consolas"
                               Margin="0,0,8,0"/>
                    
                    <DatePicker SelectedDate="{Binding FilterFromDate}"
                                Width="120"
                                Height="32"
                                Margin="0,0,12,0"
                                VerticalAlignment="Center"/>
                    
                    <TextBlock Text="TO"
                               Foreground="{DynamicResource Plc.Text.Label}"
                               VerticalAlignment="Center"
                               FontSize="11"
                               FontWeight="Bold"
                               FontFamily="Consolas"
                               Margin="0,0,8,0"/>
                    
                    <DatePicker SelectedDate="{Binding FilterToDate}"
                                Width="120"
                                Height="32"
                                VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Query"
                            Click="QueryButton_Click"
                            Background="{DynamicResource Button.Bg.Info}"
                            Foreground="White"
                            Width="90"
                            Height="32"
                            Margin="0,0,8,0"
                            FontWeight="Bold"
                            FontSize="12"
                            FontFamily="Microsoft JhengHei"/>
                    
                    <Button Content="Export PDF"
                            Click="ExportPdfButton_Click"
                            Background="#A78BFA"
                            Foreground="White"
                            Width="90"
                            Height="32"
                            FontWeight="Bold"
                            FontSize="12"
                            FontFamily="Microsoft JhengHei"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="16,0,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="{DynamicResource Sensor.Bg.Main}"
                    BorderBrush="{DynamicResource Sensor.Border}"
                    BorderThickness="1"
                    CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="{DynamicResource Sensor.Bg.Header}"
                            BorderBrush="{DynamicResource Sensor.Border}"
                            BorderThickness="0,0,0,1"
                            Padding="12,10"
                            CornerRadius="6,6,0,0">
                        <TextBlock Text="DATE LIST"
                                   Foreground="{DynamicResource Sensor.Text.Title}"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   FontFamily="Consolas"/>
                    </Border>

                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  Padding="12">
                        <ItemsControl ItemsSource="{Binding DateGroups}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource DateItemStyle}"
                                            MouseLeftButtonDown="DateItem_Click"
                                            Tag="{Binding}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="{Binding DateStr}"
                                                       Foreground="{DynamicResource Cyber.Text.Main}"
                                                       FontSize="13"
                                                       FontWeight="Bold"
                                                       FontFamily="Microsoft JhengHei"/>
                                            
                                            <TextBlock Grid.Row="1"
                                                       Text="{Binding RelativeStr}"
                                                       Foreground="{DynamicResource Plc.Text.Value}"
                                                       FontSize="11"
                                                       FontFamily="Microsoft JhengHei"
                                                       Margin="0,4,0,0"/>
                                            
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,6,0,0">
                                                <Ellipse Width="8" Height="8"
                                                         Fill="{DynamicResource Status.Success}"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,6,0"/>
                                                <TextBlock Foreground="{DynamicResource Plc.Text.Label}"
                                                           FontSize="11"
                                                           FontFamily="Microsoft JhengHei">
                                                    <Run Text="{Binding TotalCount, Mode=OneWay}"/>
                                                    <Run Text=" Records"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <Border Grid.Column="2"
                    Background="{DynamicResource Sensor.Bg.Main}"
                    BorderBrush="{DynamicResource Sensor.Border}"
                    BorderThickness="1"
                    CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="{DynamicResource Sensor.Bg.Header}"
                            BorderBrush="{DynamicResource Sensor.Border}"
                            BorderThickness="0,0,0,1"
                            Padding="12,10"
                            CornerRadius="6,6,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="{DynamicResource Sensor.Text.Title}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       FontFamily="Consolas"
                                       VerticalAlignment="Center">
                                <Run Text="{Binding CurrentViewModeText, Mode=OneWay}"/>
                                <Run Text=" - "/>
                                <Run Text="{Binding SelectedDateGroup.DateStr, Mode=OneWay}"/>
                            </TextBlock>
                            <TextBlock Foreground="{DynamicResource Plc.Text.Label}"
                                       FontSize="12"
                                       FontFamily="Microsoft JhengHei"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0">
                                <Run Text="  (Total: "/>
                                <Run Text="{Binding CurrentRecordCount, Mode=OneWay}"/>
                                <Run Text=" Records)"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  Padding="12">
                        <Grid>
                            <!-- Audit Trail Cards -->
                            <ItemsControl ItemsSource="{Binding CurrentAuditTrails}"
                                          Visibility="{Binding IsAuditTrailMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource LogCardStyle}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="140"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0"
                                                           Text="Timestamp:"
                                                           Foreground="{DynamicResource Plc.Text.Label}"
                                                           FontSize="11"
                                                           FontFamily="Consolas"/>
                                                <TextBlock Grid.Row="0" Grid.Column="1"
                                                           Text="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss.fff}'}"
                                                           Foreground="{DynamicResource Cyber.Text.Main}"
                                                           FontSize="11"
                                                           FontWeight="Bold"
                                                           FontFamily="Consolas"/>

                                                <TextBlock Grid.Row="1" Grid.Column="0"
                                                           Text="User:"
                                                           Foreground="{DynamicResource Plc.Text.Label}"
                                                           FontSize="11"
                                                           FontFamily="Consolas"
                                                           Margin="0,8,0,0"/>
                                                <TextBlock Grid.Row="1" Grid.Column="1"
                                                           Text="{Binding User}"
                                                           Foreground="{DynamicResource Plc.Text.Value}"
                                                           FontSize="11"
                                                           FontWeight="Bold"
                                                           FontFamily="Microsoft JhengHei"
                                                           Margin="0,8,0,0"/>

                                                <TextBlock Grid.Row="2" Grid.Column="0"
                                                           Text="Action:"
                                                           Foreground="{DynamicResource Plc.Text.Label}"
                                                           FontSize="11"
                                                           FontFamily="Consolas"
                                                           Margin="0,8,0,0"/>
                                                <Border Grid.Row="2" Grid.Column="1"
                                                        Style="{StaticResource TypeBadgeStyle}"
                                                        Background="{DynamicResource Button.Bg.Warning}"
                                                        Margin="0,8,0,0">
                                                    <TextBlock Text="{Binding Action}"
                                                               Foreground="White"
                                                               FontSize="11"
                                                               FontWeight="Bold"
                                                               FontFamily="Consolas"/>
                                                </Border>

                                                <TextBlock Grid.Row="3" Grid.Column="0"
                                                           Text="Target Device:"
                                                           Foreground="{DynamicResource Plc.Text.Label}"
                                                           FontSize="11"
                                                           FontFamily="Consolas"
                                                           Margin="0,8,0,0"/>
                                                <TextBlock Grid.Row="3" Grid.Column="1"
                                                           Text="{Binding TargetDevice}"
                                                           Foreground="{DynamicResource Cyber.Text.Main}"
                                                           FontSize="11"
                                                           FontFamily="Consolas"
                                                           Margin="0,8,0,0"/>

                                                <TextBlock Grid.Row="4" Grid.Column="0"
                                                           Text="Old Value:"
                                                           Foreground="{DynamicResource Plc.Text.Label}"
                                                           FontSize="11"
                                                           FontFamily="Consolas"
                                                           Margin="0,8,0,0"/>
                                                <TextBlock Grid.Row="4" Grid.Column="1"
                                                           Text="{Binding OldValue}"
                                                           Foreground="{DynamicResource Status.Offline}"
                                                           FontSize="11"
                                                           FontWeight="Bold"
                                                           FontFamily="Consolas"
                                                           Margin="0,8,0,0"/>

                                                <TextBlock Grid.Row="5" Grid.Column="0"
                                                           Text="New Value:"
                                                           Foreground="{DynamicResource Plc.Text.Label}"
                                                           FontSize="11"
                                                           FontFamily="Consolas"
                                                           Margin="0,8,0,0"/>
                                                <TextBlock Grid.Row="5" Grid.Column="1"
                                                           Text="{Binding NewValue}"
                                                           Foreground="{DynamicResource Status.Success}"
                                                           FontSize="11"
                                                           FontWeight="Bold"
                                                           FontFamily="Consolas"
                                                           Margin="0,8,0,0"/>

                                                <TextBlock Grid.Row="6" Grid.Column="0"
                                                           Text="Reason:"
                                                           Foreground="{DynamicResource Plc.Text.Label}"
                                                           FontSize="11"
                                                           FontFamily="Consolas"
                                                           Margin="0,8,0,0"/>
                                                <TextBlock Grid.Row="6" Grid.Column="1"
                                                           Text="{Binding Reason}"
                                                           Foreground="{DynamicResource Cyber.Text.Main}"
                                                           FontSize="11"
                                                           FontFamily="Microsoft JhengHei"
                                                           TextWrapping="Wrap"
                                                           Margin="0,8,0,0"/>

                                                <Border Grid.Row="7" Grid.ColumnSpan="2"
                                                        Height="4"
                                                        Background="{DynamicResource Button.Bg.Info}"
                                                        Margin="-16,12,-16,-16"
                                                        CornerRadius="0,0,8,8"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Operation Log Cards -->
                            <ItemsControl ItemsSource="{Binding CurrentOperationLogs}"
                                          Visibility="{Binding IsOperationMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource LogCardStyle}" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="140"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="150"/>
                                                    <ColumnDefinition Width="150"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Timestamp -->
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Timestamp, StringFormat='yyyy-MM-dd HH:mm:ss'}"
                                                           Foreground="{DynamicResource Plc.Text.Value}"
                                                           FontSize="12"
                                                           FontFamily="Consolas"
                                                           VerticalAlignment="Center"/>

                                                <!-- User ID -->
                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding UserId}"
                                                           Foreground="{DynamicResource Cyber.Text.Main}"
                                                           FontSize="12"
                                                           FontWeight="Medium"
                                                           VerticalAlignment="Center"
                                                           Margin="8,0,0,0"/>

                                                <!-- Command Name -->
                                                <TextBlock Grid.Column="2" 
                                                           Text="{Binding CommandName}"
                                                           Foreground="{DynamicResource Plc.Text.Title}"
                                                           FontSize="12"
                                                           FontWeight="Bold"
                                                           VerticalAlignment="Center"
                                                           Margin="8,0,0,0"/>

                                                <!-- State Change -->
                                                <StackPanel Grid.Column="3" 
                                                            Orientation="Horizontal"
                                                            VerticalAlignment="Center"
                                                            Margin="8,0,0,0">
                                                    <TextBlock Text="{Binding BeforeState}"
                                                               Foreground="{DynamicResource Plc.Text.Label}"
                                                               FontSize="11"
                                                               VerticalAlignment="Center"/>
                                                    <TextBlock Text=" -&gt; "
                                                               Foreground="{DynamicResource Cyber.Text.Main}"
                                                               FontSize="11"
                                                               Margin="4,0"
                                                               VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding AfterState}"
                                                               Foreground="{DynamicResource Sensor.Text.Title}"
                                                               FontSize="11"
                                                               FontWeight="Medium"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>

                                                <!-- Message -->
                                                <TextBlock Grid.Column="4" 
                                                           Text="{Binding Message}"
                                                           Foreground="{DynamicResource Plc.Text.Label}"
                                                           FontSize="11"
                                                           TextWrapping="Wrap"
                                                           VerticalAlignment="Center"
                                                           Margin="8,0,0,0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Event Log Cards -->
                            <ItemsControl ItemsSource="{Binding CurrentEventLogs}"
                                          Visibility="{Binding IsEventMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource LogCardStyle}" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="140"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="200"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Timestamp -->
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Timestamp, StringFormat='yyyy-MM-dd HH:mm:ss'}"
                                                           Foreground="{DynamicResource Plc.Text.Value}"
                                                           FontSize="12"
                                                           FontFamily="Consolas"
                                                           VerticalAlignment="Center"/>

                                                <!-- Event Type -->
                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding EventType}"
                                                           Foreground="{DynamicResource Cyber.Text.Main}"
                                                           FontSize="12"
                                                           FontWeight="Medium"
                                                           VerticalAlignment="Center"
                                                           Margin="8,0,0,0"/>

                                                <!-- Severity -->
                                                <Border Grid.Column="2" 
                                                        Background="{DynamicResource Sensor.Border}"
                                                        CornerRadius="3"
                                                        Padding="6,2"
                                                        Margin="8,0,0,0"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Severity}"
                                                               Foreground="{DynamicResource Sensor.Text.Title}"
                                                               FontSize="10"
                                                               FontWeight="Bold"
                                                               HorizontalAlignment="Center"/>
                                                </Border>

                                                <!-- Event Description -->
                                                <TextBlock Grid.Column="3" 
                                                           Text="{Binding EventDescription}"
                                                           Foreground="{DynamicResource Plc.Text.Title}"
                                                           FontSize="12"
                                                           FontWeight="Bold"
                                                           VerticalAlignment="Center"
                                                           Margin="8,0,0,0"/>

                                                <!-- Message -->
                                                <TextBlock Grid.Column="4" 
                                                           Text="{Binding Message}"
                                                           Foreground="{DynamicResource Plc.Text.Label}"
                                                           FontSize="11"
                                                           TextWrapping="Wrap"
                                                           VerticalAlignment="Center"
                                                           Margin="8,0,0,0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Periodic Data Log Cards -->
                            <ItemsControl ItemsSource="{Binding CurrentPeriodicDataLogs}"
                                          Visibility="{Binding IsPeriodicDataMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource LogCardStyle}" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="140"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="120"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Timestamp -->
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Timestamp, StringFormat='yyyy-MM-dd HH:mm:ss'}"
                                                           Foreground="{DynamicResource Plc.Text.Value}"
                                                           FontSize="12"
                                                           FontFamily="Consolas"
                                                           VerticalAlignment="Center"/>

                                                <!-- Batch ID -->
                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding BatchId}"
                                                           Foreground="{DynamicResource Cyber.Text.Main}"
                                                           FontSize="12"
                                                           FontWeight="Medium"
                                                           VerticalAlignment="Center"
                                                           Margin="8,0,0,0"/>

                                                <!-- PreDry Temp -->
                                                <StackPanel Grid.Column="2" 
                                                            Orientation="Horizontal"
                                                            VerticalAlignment="Center"
                                                            Margin="8,0,0,0">
                                                    <TextBlock Text="PreDry: "
                                                               Foreground="{DynamicResource Plc.Text.Label}"
                                                               FontSize="11"/>
                                                    <TextBlock Text="{Binding PredryTemp, StringFormat='{}{0:F1} C'}"
                                                               Foreground="{DynamicResource Sensor.Text.Title}"
                                                               FontSize="11"
                                                               FontWeight="Medium"/>
                                                </StackPanel>

                                                <!-- Dry Temp -->
                                                <StackPanel Grid.Column="3" 
                                                            Orientation="Horizontal"
                                                            VerticalAlignment="Center"
                                                            Margin="8,0,0,0">
                                                    <TextBlock Text="Dry: "
                                                               Foreground="{DynamicResource Plc.Text.Label}"
                                                               FontSize="11"/>
                                                    <TextBlock Text="{Binding DryTemp, StringFormat='{}{0:F1} C'}"
                                                               Foreground="{DynamicResource Sensor.Text.Title}"
                                                               FontSize="11"
                                                               FontWeight="Medium"/>
                                                </StackPanel>

                                                <!-- CDA Pressure -->
                                                <StackPanel Grid.Column="4" 
                                                            Orientation="Horizontal"
                                                            VerticalAlignment="Center"
                                                            Margin="8,0,0,0">
                                                    <TextBlock Text="CDA: "
                                                               Foreground="{DynamicResource Plc.Text.Label}"
                                                               FontSize="11"/>
                                                    <TextBlock Text="{Binding CdaInletPressure, StringFormat='{}{0:F1} bar'}"
                                                               Foreground="{DynamicResource Sensor.Text.Title}"
                                                               FontSize="11"
                                                               FontWeight="Medium"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
