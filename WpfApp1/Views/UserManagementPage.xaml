<Window x:Class="WpfApp1.Views.UserManagementPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Stackdose Control System - User Management"
        Height="900" Width="1600"
        WindowStyle="None"
        Background="#1a1a2e">

    <!-- 整體 Grid 布局：Header, Content, Footer -->
    <Grid>
        <Grid.RowDefinitions>
            <!-- Header 區域 -->
            <RowDefinition Height="60"/>
            <!-- 主內容區域 -->
            <RowDefinition Height="*"/>
            <!-- Bottom Bar 區域 -->
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <!-- ==================== -->
        <!-- Header 區域（類似 CyberFrame） -->
        <!-- ==================== -->
        <Border Grid.Row="0" 
                Background="#16213e" 
                BorderBrush="#00d4ff" 
                BorderThickness="0,0,0,2">
            <Grid Margin="15,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo 和標題 -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <!-- Logo 圖示 -->
                    <Border Width="38" Height="38" 
                            Background="#00d4ff" 
                            CornerRadius="19"
                            Margin="0,0,12,0">
                        <TextBlock Text="S" 
                                   FontSize="22" 
                                   FontWeight="Bold"
                                   Foreground="#16213e"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- 系統標題 -->
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="STACKDOSE 3D PRINTING SYSTEM" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Foreground="#00d4ff"/>
                        <TextBlock Text="3D 列印藥錠智慧製程系統" 
                                   FontSize="10" 
                                   Foreground="#7f8c8d"
                                   Margin="0,1,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- 中間當前頁面名稱 -->
                <StackPanel Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="?? 使用者管理" 
                               FontSize="22" 
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- 右側使用者資訊 -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <!-- 使用者頭像 -->
                    <Border Width="36" Height="36" 
                            Background="#34495e" 
                            CornerRadius="18"
                            Margin="0,0,8,0">
                        <TextBlock Text="??" 
                                   FontSize="20"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- 使用者資訊 -->
                    <StackPanel VerticalAlignment="Center" Margin="0,0,12,0">
                        <TextBlock Text="Admin" 
                                   FontSize="13" 
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="管理員 (等級 4)" 
                                   FontSize="10" 
                                   Foreground="#95a5a6"/>
                    </StackPanel>

                    <!-- 登出按鈕 -->
                    <Button Content="登出" 
                            Width="70" 
                            Height="30"
                            Background="#e74c3c"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="11"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#c0392b"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ==================== -->
        <!-- 主內容區域：左側導航 + 右側使用者管理 -->
        <!-- ==================== -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- 左側功能列表 (1/5) -->
                <ColumnDefinition Width="1*"/>
                <!-- 右側使用者管理 (4/5) -->
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <!-- ==================== -->
            <!-- 左側功能導航列表 -->
            <!-- ==================== -->
            <Border Grid.Column="0" 
                    Background="#0f3460" 
                    BorderBrush="#00d4ff" 
                    BorderThickness="0,0,2,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,20,0,0">
                        <!-- 導航標題 -->
                        <TextBlock Text="功能選單" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="#00d4ff"
                                   Margin="20,0,0,20"/>

                        <!-- 首頁 Overview -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Cursor="Hand">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1e2a47"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Margin="15,12">
                                <TextBlock Text="?? 首頁 Overview" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                                <TextBlock Text="Home Dashboard" 
                                           FontSize="10" 
                                           Foreground="#95a5a6"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Log 檢視 -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Cursor="Hand">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1e2a47"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Margin="15,12">
                                <TextBlock Text="?? Log 檢視" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                                <TextBlock Text="Log Viewer" 
                                           FontSize="10" 
                                           Foreground="#95a5a6"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- 使用者管理 - 已選取 -->
                        <Border Background="#1e2a47" 
                                Margin="10,5"
                                CornerRadius="8"
                                BorderBrush="#00d4ff"
                                BorderThickness="2"
                                Cursor="Hand">
                            <StackPanel Margin="15,12">
                                <TextBlock Text="?? 使用者管理" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="#00d4ff"/>
                                <TextBlock Text="User Management" 
                                           FontSize="10" 
                                           Foreground="#00d4ff"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- 系統設定 -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Cursor="Hand">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1e2a47"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Margin="15,12">
                                <TextBlock Text="?? 系統設定" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                                <TextBlock Text="System Settings" 
                                           FontSize="10" 
                                           Foreground="#95a5a6"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- 分隔線 -->
                        <Border Height="2" 
                                Background="#34495e" 
                                Margin="20,30,20,20"/>

                        <!-- 權限等級說明 -->
                        <TextBlock Text="權限等級" 
                                   FontSize="14" 
                                   FontWeight="Bold"
                                   Foreground="#95a5a6"
                                   Margin="20,0,0,15"/>

                        <!-- 等級 4 -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="等級 4" 
                                           FontSize="11" 
                                           Foreground="#95a5a6"/>
                                <TextBlock Text="Administrator" 
                                           FontSize="13" 
                                           FontWeight="Bold"
                                           Foreground="#9b59b6"
                                           Margin="0,3,0,0"/>
                                <TextBlock Text="管理員" 
                                           FontSize="10" 
                                           Foreground="#9b59b6"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- 等級 3 -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="等級 3" 
                                           FontSize="11" 
                                           Foreground="#95a5a6"/>
                                <TextBlock Text="Supervisor" 
                                           FontSize="13" 
                                           FontWeight="Bold"
                                           Foreground="#3498db"
                                           Margin="0,3,0,0"/>
                                <TextBlock Text="監督者" 
                                           FontSize="10" 
                                           Foreground="#3498db"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- 等級 2 -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="等級 2" 
                                           FontSize="11" 
                                           Foreground="#95a5a6"/>
                                <TextBlock Text="Instructor" 
                                           FontSize="13" 
                                           FontWeight="Bold"
                                           Foreground="#f39c12"
                                           Margin="0,3,0,0"/>
                                <TextBlock Text="指導員" 
                                           FontSize="10" 
                                           Foreground="#f39c12"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- 等級 1 -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="等級 1" 
                                           FontSize="11" 
                                           Foreground="#95a5a6"/>
                                <TextBlock Text="Operator" 
                                           FontSize="13" 
                                           FontWeight="Bold"
                                           Foreground="#2ecc71"
                                           Margin="0,3,0,0"/>
                                <TextBlock Text="操作員" 
                                           FontSize="10" 
                                           Foreground="#2ecc71"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- ==================== -->
            <!-- 右側使用者管理區域 -->
            <!-- ==================== -->
            <Border Grid.Column="1" Background="#1a1a2e">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 操作按鈕列 -->
                    <Border Grid.Row="0"
                            Background="#16213e"
                            BorderBrush="#00d4ff"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="15,12"
                            Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- 新增使用者按鈕 -->
                            <Button Grid.Column="0"
                                    Content="? 新增使用者" 
                                    Width="120" 
                                    Height="32"
                                    Background="#2ecc71"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="11"
                                    FontWeight="Bold"
                                    Cursor="Hand"
                                    Margin="0,0,15,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="5"
                                                            BorderThickness="0">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#27ae60"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- 搜尋框 -->
                            <Border Grid.Column="1"
                                    Background="#0f3460"
                                    BorderBrush="#00d4ff"
                                    BorderThickness="1"
                                    CornerRadius="5"
                                    Padding="10,6"
                                    Width="300"
                                    Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="??" FontSize="12" Margin="0,0,8,0"/>
                                    <TextBlock Text="搜尋使用者..." 
                                               Foreground="#7f8c8d" 
                                               FontSize="11"/>
                                </StackPanel>
                            </Border>

                            <!-- 確定按鈕 -->
                            <Button Grid.Column="2"
                                    Content="確定" 
                                    Width="60" 
                                    Height="32"
                                    Background="#3498db"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="11"
                                    FontWeight="Bold"
                                    Cursor="Hand"
                                    Margin="0,0,15,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="5"
                                                            BorderThickness="0">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2980b9"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- 狀態篩選 -->
                            <StackPanel Grid.Column="4" Orientation="Horizontal">
                                <TextBlock Text="狀態篩選:" 
                                           FontSize="11" 
                                           Foreground="#95a5a6"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"/>

                                <!-- 全部 -->
                                <Border Background="#0f3460"
                                        BorderBrush="#00d4ff"
                                        BorderThickness="2"
                                        CornerRadius="5"
                                        Padding="10,6"
                                        Margin="0,0,8,0"
                                        Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="10" Height="10" 
                                                 Fill="#00d4ff" 
                                                 Margin="0,0,6,0"/>
                                        <TextBlock Text="全部" 
                                                   Foreground="White" 
                                                   FontSize="11"/>
                                    </StackPanel>
                                </Border>

                                <!-- 有效 -->
                                <Border Background="#0f3460"
                                        BorderBrush="#34495e"
                                        BorderThickness="1"
                                        CornerRadius="5"
                                        Padding="10,6"
                                        Margin="0,0,8,0"
                                        Cursor="Hand">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="#00d4ff"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="10" Height="10" 
                                                 Fill="Transparent"
                                                 Stroke="#2ecc71"
                                                 StrokeThickness="2"
                                                 Margin="0,0,6,0"/>
                                        <TextBlock Text="有效" 
                                                   Foreground="#2ecc71" 
                                                   FontSize="11"/>
                                    </StackPanel>
                                </Border>

                                <!-- 無效 -->
                                <Border Background="#0f3460"
                                        BorderBrush="#34495e"
                                        BorderThickness="1"
                                        CornerRadius="5"
                                        Padding="10,6"
                                        Cursor="Hand">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="#00d4ff"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="10" Height="10" 
                                                 Fill="Transparent"
                                                 Stroke="#e74c3c"
                                                 StrokeThickness="2"
                                                 Margin="0,0,6,0"/>
                                        <TextBlock Text="無效" 
                                                   Foreground="#e74c3c" 
                                                   FontSize="11"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- 使用者列表表格 -->
                    <Border Grid.Row="1"
                            Background="#16213e"
                            BorderBrush="#00d4ff"
                            BorderThickness="1"
                            CornerRadius="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- 表格標題列 -->
                            <Border Grid.Row="0"
                                    Background="#0f3460"
                                    Padding="15,12"
                                    CornerRadius="10,10,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="使用者帳號" 
                                               FontSize="12" FontWeight="Bold" Foreground="#00d4ff"/>
                                    <TextBlock Grid.Column="1" Text="權限等級" 
                                               FontSize="12" FontWeight="Bold" Foreground="#00d4ff"/>
                                    <TextBlock Grid.Column="2" Text="狀態" 
                                               FontSize="12" FontWeight="Bold" Foreground="#00d4ff"/>
                                    <TextBlock Grid.Column="3" Text="Email" 
                                               FontSize="12" FontWeight="Bold" Foreground="#00d4ff"/>
                                    <TextBlock Grid.Column="4" Text="最後登入時間" 
                                               FontSize="12" FontWeight="Bold" Foreground="#00d4ff"/>
                                    <TextBlock Grid.Column="5" Text="操作" 
                                               FontSize="12" FontWeight="Bold" Foreground="#00d4ff"
                                               HorizontalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- 表格內容 -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <!-- 使用者 1 - Administrator -->
                                    <Border Background="#0f3460"
                                            BorderBrush="#34495e"
                                            BorderThickness="0,0,0,1"
                                            Padding="15,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="200"/>
                                                <ColumnDefinition Width="180"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="180"/>
                                                <ColumnDefinition Width="120"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="Admin" 
                                                           FontSize="13" 
                                                           FontWeight="SemiBold"
                                                           Foreground="White"
                                                           Margin="0,0,8,0"/>
                                                <Border Background="#00d4ff"
                                                        CornerRadius="3"
                                                        Padding="5,2">
                                                    <TextBlock Text="當前" 
                                                               FontSize="9" 
                                                               FontWeight="Bold"
                                                               Foreground="#16213e"/>
                                                </Border>
                                            </StackPanel>

                                            <Border Grid.Column="1"
                                                    Background="#9b59b6"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="等級 4 Administrator" 
                                                           FontSize="11" 
                                                           FontWeight="Bold"
                                                           Foreground="White"/>
                                            </Border>

                                            <TextBlock Grid.Column="2" 
                                                       Text="有效" 
                                                       FontSize="12" 
                                                       Foreground="#2ecc71"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="3" 
                                                       Text="admin@stackdose.com" 
                                                       FontSize="11" 
                                                       Foreground="#95a5a5"
                                                       VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="4" 
                                                       Text="2025-01-12 14:30:25" 
                                                       FontSize="11" 
                                                       Foreground="#95a5a6"
                                                       VerticalAlignment="Center"/>

                                            <Button Grid.Column="5"
                                                    Content="編輯" 
                                                    Width="80" 
                                                    Height="26"
                                                    Background="#3498db"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    FontSize="10"
                                                    Cursor="Hand"
                                                    HorizontalAlignment="Center">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                            CornerRadius="4"
                                                                            BorderThickness="0">
                                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                                          VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#2980b9"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </Grid>
                                    </Border>

                                    <!-- 使用者 2 - Supervisor -->
                                    <Border Background="#0f3460"
                                            BorderBrush="#34495e"
                                            BorderThickness="0,0,0,1"
                                            Padding="15,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="200"/>
                                                <ColumnDefinition Width="180"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="180"/>
                                                <ColumnDefinition Width="120"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" 
                                                       Text="Supervisor01" 
                                                       FontSize="13" 
                                                       FontWeight="SemiBold"
                                                       Foreground="White"
                                                       VerticalAlignment="Center"/>

                                            <Border Grid.Column="1"
                                                    Background="#3498db"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="等級 3 Supervisor" 
                                                           FontSize="11" 
                                                           FontWeight="Bold"
                                                           Foreground="White"/>
                                            </Border>

                                            <TextBlock Grid.Column="2" 
                                                       Text="有效" 
                                                       FontSize="12" 
                                                       Foreground="#2ecc71"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="3" 
                                                       Text="supervisor01@stackdose.com" 
                                                       FontSize="11" 
                                                       Foreground="#95a5a5"
                                                       VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="4" 
                                                       Text="2025-01-12 10:15:30" 
                                                       FontSize="11" 
                                                       Foreground="#95a5a6"
                                                       VerticalAlignment="Center"/>

                                            <Button Grid.Column="5"
                                                    Content="編輯" 
                                                    Width="80" 
                                                    Height="26"
                                                    Background="#3498db"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    FontSize="10"
