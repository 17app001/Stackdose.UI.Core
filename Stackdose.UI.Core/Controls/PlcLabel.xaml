<UserControl x:Class="Stackdose.UI.Core.Controls.PlcLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="200"
             ToolTip="{Binding Address, RelativeSource={RelativeSource Self}}"
             Foreground="{DynamicResource Plc.Text.Value}">

    <Border BorderBrush="{DynamicResource Plc.Border}" 
            BorderThickness="1" 
            Background="{DynamicResource Plc.Bg.Main}" 
            CornerRadius="4" 
            Padding="10,5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 標題與位址區塊 -->
            <Grid Grid.Row="0" Margin="0,0,0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 標題 (靠左) -->
                <!-- 使用 TextTrimming 當文字太長時顯示 ... -->
                <TextBlock Grid.Column="0"
                           Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue='Label'}" 
                           Foreground="{DynamicResource Plc.Text.Label}" 
                           FontSize="12"
                           TextTrimming="CharacterEllipsis" 
                           VerticalAlignment="Center"/>

                <!-- 位址 (靠右，並分開顯示) -->
                <!-- 🔥 修改：加入 Margin 確保與 Label 分開，並設定 MinWidth 保持距離 -->
                <TextBlock Grid.Column="1"
                           Text="{Binding Address, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue='D0'}" 
                           Foreground="{DynamicResource Plc.Text.Default}" 
                           FontSize="10" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Right"
                           Margin="10,0,0,0"/>
            </Grid>

            <!-- 數值顯示 -->
            <TextBlock Grid.Row="1" 
                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="20" 
                       FontWeight="Bold" 
                       FontFamily="Consolas"
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <!-- 預設顯示 Value -->
                        <!-- 注意：FallbackValue 僅在設計時或綁定失敗時顯示，執行時會被 Value 覆蓋 -->
                        <Setter Property="Text" Value="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue='123.4'}"/>

                        <Style.Triggers>
                            <!-- 🔥 修正：當數值為 "-" (初始值) 時，顯示 DefaultValue -->
                            <DataTrigger Binding="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="-">
                                <Setter Property="Text" Value="{Binding DefaultValue, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                <!-- 選用：讓預設值稍微暗一點，區分這是「無效值」 -->
                                <Setter Property="Opacity" Value="0.5"/>
                            </DataTrigger>

                            <!-- 🔥 修正：增加對空字串 "" 的判斷，防止某些情況下變成空白 -->
                            <DataTrigger Binding="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="">
                                <Setter Property="Text" Value="{Binding DefaultValue, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                <Setter Property="Opacity" Value="0.5"/>
                            </DataTrigger>

                            <!-- 當數值為 null 時 -->
                            <DataTrigger Binding="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Null}">
                                <Setter Property="Text" Value="{Binding DefaultValue, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                <Setter Property="Opacity" Value="0.5"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
    </Border>
</UserControl>