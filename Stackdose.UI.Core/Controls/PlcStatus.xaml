<UserControl x:Class="Stackdose.UI.Core.Controls.PlcStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="220">

    <Border x:Name="MainBorder"
            BorderBrush="{DynamicResource Plc.Text.Value}" 
            Background="{DynamicResource Plc.Bg.Main}" 
            CornerRadius="4" 
            Padding="10">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="BorderThickness" Value="1"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding ShowBorder, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False">
                        <Setter Property="BorderThickness" Value="0"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 狀態燈 -->
            <Ellipse x:Name="StatusLight" 
                     Width="20" 
                     Height="20" 
                     Fill="{DynamicResource Status.Offline}" 
                     Stroke="White" 
                     StrokeThickness="1" 
                     Margin="0,0,15,0">
                <Ellipse.Effect>
                    <DropShadowEffect Color="White" BlurRadius="5" ShadowDepth="0" Opacity="0.5"/>
                </Ellipse.Effect>
            </Ellipse>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">

                <!-- 第一行：標題 + ScanInterval 顯示 -->
                <Grid Margin="0,0,0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="PLC CONNECTION" 
                               Foreground="{DynamicResource Plc.Text.Label}" 
                               FontSize="10" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>

                    <!-- 新增：顯示 ScanInterval (例如 "⟳ 100 ms") -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="[R] " 
                                   Foreground="{DynamicResource Plc.Text.Default}" 
                                   FontSize="9" 
                                   Margin="0,1,0,0"/>
                        <TextBlock Text="{Binding ScanInterval, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                   Foreground="{DynamicResource Plc.Text.Default}" 
                                   FontSize="10" 
                                   FontWeight="SemiBold"/>
                        <TextBlock Text=" ms" 
                                   Foreground="{DynamicResource Plc.Text.Default}" 
                                   FontSize="10"/>
                    </StackPanel>
                </Grid>

               
                <TextBlock x:Name="StatusText" 
                           Text="Waiting..." 
                           Foreground="{DynamicResource Plc.Text.Default}" 
                           FontSize="10"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>