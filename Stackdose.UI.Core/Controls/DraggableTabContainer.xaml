<UserControl x:Class="Stackdose.UI.Core.Controls.DraggableTabContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Stackdose.UI.Core.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Name="Root"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">

    <Border BorderThickness="1" 
            BorderBrush="{DynamicResource Cyber.Border}"
            Padding="0" 
            CornerRadius="4" 
            Background="{DynamicResource Cyber.Bg.Panel}">
        <TabControl x:Name="PART_TabControl" 
                    AllowDrop="True" 
                    Padding="4"
                    Background="Transparent"
                    BorderThickness="0"
                    PreviewMouseMove="TabControl_PreviewMouseMove" 
                    Drop="TabControl_Drop">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{DynamicResource Cyber.Text.Muted}"/>
                    <Setter Property="Padding" Value="16,8"/>
                    <Setter Property="Margin" Value="0,0,2,0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Grid x:Name="Panel">
                                    <Border x:Name="Border" 
                                            Background="Transparent" 
                                            BorderBrush="{DynamicResource Cyber.Border}" 
                                            BorderThickness="1,1,1,0"
                                            CornerRadius="4,4,0,0"/>
                                    <ContentPresenter x:Name="ContentSite"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"
                                                      ContentSource="Header"
                                                      Margin="{TemplateBinding Padding}"
                                                      RecognizesAccessKey="True"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource Cyber.Bg.Card}"/>
                                        <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource Cyber.NeonBlue}"/>
                                        <Setter TargetName="Border" Property="BorderThickness" Value="1,2,1,0"/>
                                        <Setter Property="Foreground" Value="{DynamicResource Cyber.NeonBlue}"/>
                                        <Setter Property="Panel.ZIndex" Value="100"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#0DFFFFFF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            
            <!-- ItemContainerStyle binds TabViewModel properties to TabItem -->
            <TabControl.ItemContainerStyle>
                <Style TargetType="TabItem" BasedOn="{StaticResource {x:Type TabItem}}">
                    <Setter Property="Header" Value="{Binding Header}"/>
                </Style>
            </TabControl.ItemContainerStyle>
            
            <!-- ContentTemplate wraps content in a proper container -->
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <Border Background="Transparent" Padding="4">
                        <ContentControl Content="{Binding Content}" 
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Stretch"/>
                    </Border>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Border>
</UserControl>