<UserControl x:Class="WpfApp1.Views.SystemTestPanelPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- System Test Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource CardBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="30"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="?? System Test Panel"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Development and testing tools for UBI System"
                               FontSize="16"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Test Controls -->
            <Border Grid.Row="1"
                    Background="{StaticResource DarkBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Test Buttons -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <Button Content="Run Diagnostics"
                                Width="140"
                                Height="40"
                                Background="{StaticResource InfoBrush}"
                                Foreground="{StaticResource TextPrimaryBrush}"
                                BorderThickness="0"
                                FontSize="12"
                                Cursor="Hand"
                                Margin="0,0,10,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="Test PLC Connection"
                                Width="140"
                                Height="40"
                                Background="{StaticResource SuccessBrush}"
                                Foreground="{StaticResource TextPrimaryBrush}"
                                BorderThickness="0"
                                FontSize="12"
                                Cursor="Hand"
                                Margin="0,0,10,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="Test Sensors"
                                Width="140"
                                Height="40"
                                Background="{StaticResource WarningBrush}"
                                Foreground="{StaticResource TextPrimaryBrush}"
                                BorderThickness="0"
                                FontSize="12"
                                Cursor="Hand"
                                Margin="0,0,10,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="Clear Logs"
                                Width="140"
                                Height="40"
                                Background="{StaticResource ErrorBrush}"
                                Foreground="{StaticResource TextPrimaryBrush}"
                                BorderThickness="0"
                                FontSize="12"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- Test Results Area -->
                    <Border Grid.Row="1"
                            Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="{StaticResource BorderSecondaryBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="20">
                                <TextBlock Text="Test Results &amp; Logs"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <!-- Sample Test Results -->
                                <StackPanel>
                                    <TextBlock Text="[INFO] System test panel initialized"
                                               FontSize="12"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontFamily="Consolas"
                                               Margin="0,3"/>
                                    <TextBlock Text="[SUCCESS] PLC connection test passed"
                                               FontSize="12"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontFamily="Consolas"
                                               Margin="0,3"/>
                                    <TextBlock Text="[WARNING] Sensor calibration needed"
                                               FontSize="12"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontFamily="Consolas"
                                               Margin="0,3"/>
                                    <TextBlock Text="[INFO] All development tools loaded"
                                               FontSize="12"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontFamily="Consolas"
                                               Margin="0,3"/>
                                </StackPanel>

                                <!-- Development Notes -->
                                <Border Background="{StaticResource DarkBackgroundBrush}"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="5"
                                        Padding="15"
                                        Margin="0,20,0,0">
                                    <StackPanel>
                                        <TextBlock Text="Development Notes:"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource WarningBrush}"
                                                   Margin="0,0,0,10"/>

                                        <TextBlock Text="? This panel is for development and testing purposes"
                                                   FontSize="12"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,2"/>
                                        <TextBlock Text="? Use diagnostics to troubleshoot system issues"
                                                   FontSize="12"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,2"/>
                                        <TextBlock Text="? PLC connection tests verify hardware communication"
                                                   FontSize="12"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,2"/>
                                        <TextBlock Text="? Sensor tests validate data acquisition"
                                                   FontSize="12"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,2"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
