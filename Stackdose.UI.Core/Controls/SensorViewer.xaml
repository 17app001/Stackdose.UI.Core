<UserControl x:Class="Stackdose.UI.Core.Controls.SensorViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stackdose.UI.Core.Controls"
             mc:Ignorable="d" 
             MinHeight="200" MinWidth="300"
             d:DesignHeight="400" d:DesignWidth="500">
    
    <UserControl.Resources>
        <DataTemplate x:Key="SensorItemTemplate">
            <Border BorderBrush="{DynamicResource Sensor.Border}" 
                    BorderThickness="1" 
                    Background="{DynamicResource Sensor.Bg.Main}" 
                    CornerRadius="6" 
                    Margin="6,3" 
                    Padding="12,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Status Indicator -->
                    <Ellipse Grid.Column="0" Width="14" Height="14" 
                             Margin="0,0,12,0" VerticalAlignment="Center">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="{DynamicResource Status.Success}"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#4CAF50" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                        <Setter Property="Fill" Value="{DynamicResource Status.Error}"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#FF5252" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>

                    <!-- Operation Description -->
                    <TextBlock Grid.Column="1" 
                               Text="{Binding OperationDescription}" 
                               Foreground="{DynamicResource Sensor.Text.Label}" 
                               FontSize="14" 
                               FontWeight="Medium"
                               FontFamily="Microsoft JhengHei, Segoe UI, Arial"
                               VerticalAlignment="Center"
                               TextTrimming="CharacterEllipsis"/>

                    <!-- PLC Address -->
                    <Border Grid.Column="2" 
                            Background="{DynamicResource Plc.Bg.Dark}" 
                            BorderBrush="{DynamicResource Plc.Border}"
                            BorderThickness="1"
                            CornerRadius="3" 
                            Padding="8,4"
                            Margin="12,0,0,0"
                            VerticalAlignment="Center">
                        <TextBlock Foreground="{DynamicResource Plc.Text.Label}" 
                                   FontSize="11" 
                                   FontFamily="Consolas"
                                   VerticalAlignment="Center">
                            <Run Text="("/>
                            <Run Text="{Binding Device}" Foreground="{DynamicResource Plc.Text.Value}"/>
                            <Run Text="{Binding Bit, StringFormat='.{0}', Mode=OneWay}" Foreground="{DynamicResource Status.Warning}"/>
                            <Run Text=")"/>
                        </TextBlock>
                    </Border>

                    <!-- Last Update Time -->
                    <TextBlock Grid.Column="3" 
                               Text="{Binding LastUpdate, StringFormat='HH:mm:ss'}" 
                               Foreground="{DynamicResource Plc.Text.Default}" 
                               FontSize="10" 
                               FontFamily="Consolas"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"/>
                </Grid>
            </Border>
        </DataTemplate>

        <Style x:Key="GroupHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource Sensor.Text.Group}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Microsoft JhengHei, Segoe UI, Arial"/>
            <Setter Property="Margin" Value="8,12,8,6"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#00A8E8" BlurRadius="5" ShadowDepth="0" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource Sensor.Bg.Main}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Bar -->
        <Border Grid.Row="0" 
                Background="{DynamicResource Sensor.Bg.Header}" 
                BorderBrush="{DynamicResource Sensor.Border}"
                BorderThickness="0,0,0,1"
                Padding="12,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Grid.Column="0" 
                           Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           Foreground="{DynamicResource Sensor.Text.Title}" 
                           FontSize="16" 
                           FontWeight="Bold"
                           FontFamily="Microsoft JhengHei, Segoe UI, Arial"
                           VerticalAlignment="Center"/>

                <!-- Show Alarms Only Checkbox -->
                <CheckBox Grid.Column="1" 
                          x:Name="ChkShowAlarmsOnly"
                          Content="Only Sensor ON" 
                          Foreground="{DynamicResource Sensor.Text.Label}" 
                          FontSize="12"
                          FontFamily="Microsoft JhengHei, Segoe UI, Arial"
                          VerticalAlignment="Center"
                          Margin="0,0,20,0"
                          Checked="ChkShowAlarmsOnly_Changed"
                          Unchecked="ChkShowAlarmsOnly_Changed">
                    <CheckBox.Style>
                        <Style TargetType="CheckBox">
                            <Setter Property="Cursor" Value="Hand"/>
                        </Style>
                    </CheckBox.Style>
                </CheckBox>

                <!-- Statistics -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{DynamicResource Status.Error}" 
                            CornerRadius="3" 
                            Padding="6,3" 
                            Margin="0,0,4,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Alarm: " 
                                       Foreground="White" 
                                       FontSize="11" 
                                       FontWeight="Bold"/>
                            <TextBlock x:Name="TxtAlarmCount" 
                                       Text="0" 
                                       Foreground="White" 
                                       FontSize="11" 
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    
                    <TextBlock Text=" / " 
                               Foreground="{DynamicResource Plc.Text.Default}" 
                               FontSize="12" 
                               Margin="4,0"/>
                    
                    <Border Background="{DynamicResource Status.Success}" 
                            CornerRadius="3" 
                            Padding="6,3" 
                            Margin="4,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Total: " 
                                       Foreground="White" 
                                       FontSize="11" 
                                       FontWeight="Bold"/>
                            <TextBlock x:Name="TxtTotalCount" 
                                       Text="0" 
                                       Foreground="White" 
                                       FontSize="11" 
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Sensor List -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Background="{DynamicResource Sensor.Bg.Main}"
                      Padding="4">
            <ItemsControl x:Name="SensorList" ItemTemplate="{StaticResource SensorItemTemplate}">
                <ItemsControl.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource Sensor.Bg.Header}" 
                                        BorderBrush="{DynamicResource Sensor.Border}"
                                        BorderThickness="1"
                                        CornerRadius="4" 
                                        Padding="8,4" 
                                        Margin="4,8,4,2">
                                    <TextBlock Text="{Binding Name}" Style="{StaticResource GroupHeaderStyle}"/>
                                </Border>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ItemsControl.GroupStyle>
            </ItemsControl>
        </ScrollViewer>

        <!-- No Data Hint -->
        <Border Grid.Row="1" 
                Background="{DynamicResource Sensor.Bg.Main}"
                Visibility="Collapsed" 
                x:Name="NoDataHint">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="[NO DATA]" 
                           FontSize="48" 
                           Foreground="{DynamicResource Plc.Text.Default}"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,12"/>
                <TextBlock Text="No sensors configured" 
                           Foreground="{DynamicResource Sensor.Text.Label}" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           FontFamily="Microsoft JhengHei, Segoe UI, Arial"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Please set ConfigFile property" 
                           Foreground="{DynamicResource Plc.Text.Default}" 
                           FontSize="12" 
                           FontStyle="Italic"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
