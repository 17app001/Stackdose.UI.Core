<UserControl x:Class="WpfApp1.Panels.SensorPrintHeadPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Controls="http://schemas.stackdose.com/wpf"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Sensor Viewer Area -->
        <Border Grid.Row="0" 
                BorderBrush="#00E5FF" BorderThickness="2" 
                Background="#1A1A2E" Padding="10"
                Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Sensor Monitoring" 
                           FontSize="18" FontWeight="Bold" 
                           Foreground="#00E5FF" 
                           Margin="0,0,0,10"/>

                <Controls:SensorViewer Grid.Row="1"
                                       Title="SENSOR Viewer"
                                       ConfigFile="Sensors.json"
                                       EnableGrouping="True"
                                       AutoStart="True"
                                       RefreshInterval="499"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch"/>
            </Grid>
        </Border>

        <!-- PrintHead Status Area -->
        <Border Grid.Row="1" 
                BorderBrush="#FFA726" BorderThickness="2" 
                Background="#1A1A2E" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="PrintHead Status" 
                           FontSize="18" FontWeight="Bold" 
                           Foreground="#FFA726" 
                           Margin="0,0,0,10"/>

                <Controls:PrintHeadStatus Grid.Row="1"
                                          HeadName="Feiyang Head 1"
                                          ConfigFilePath="feiyang_head1.json"
                                          AutoConnect="False"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Top"/>
            </Grid>
        </Border>

    </Grid>
</UserControl>
