<UserControl x:Class="Stackdose.UI.Core.Controls.RecipeLoader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Stackdose.UI.Core.Controls"
             mc:Ignorable="d"
             x:Name="root"
             d:DesignHeight="320" d:DesignWidth="450">

    <Border Background="#1a1a2e" 
            BorderBrush="#00d4ff" 
            BorderThickness="2" 
            CornerRadius="8"
            Padding="20">
        <Border.Effect>
            <DropShadowEffect Color="#00d4ff" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="{Binding Title, ElementName=root}" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#00d4ff"
                           HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#00d4ff" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>

            <Border Grid.Row="1" 
                    Background="#0f3460" 
                    CornerRadius="5" 
                    Padding="10,8"
                    Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="StatusText" 
                               Grid.Column="0"
                               Text="Ready to load Recipe..." 
                               FontSize="13" 
                               Foreground="Gray"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"/>

                    <TextBlock x:Name="LoadingIndicator" 
                               Grid.Column="1"
                               Text="&#x23F3;" 
                               FontSize="16"
                               VerticalAlignment="Center"
                               Visibility="Collapsed"
                               Margin="10,0,0,0">
                        <TextBlock.RenderTransform>
                            <RotateTransform x:Name="LoadingRotation" CenterX="8" CenterY="8"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="TextBlock.Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="LoadingRotation"
                                                       Storyboard.TargetProperty="Angle"
                                                       From="0" To="360" Duration="0:0:2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                </Grid>
            </Border>

            <Grid Grid.Row="2" Margin="0,0,0,15">
                <StackPanel x:Name="NoRecipePanel" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Visibility="Collapsed">
                    <TextBlock Text="&#x1F4CB;" 
                               FontSize="48" 
                               HorizontalAlignment="Center"
                               Opacity="0.3"/>
                    <TextBlock Text="No Recipe Loaded" 
                               FontSize="14" 
                               Foreground="Gray"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>

                <StackPanel x:Name="RecipeInfoPanel" 
                            Visibility="Collapsed">
                    <Border Background="#0f3460" 
                            CornerRadius="5" 
                            Padding="15"
                            Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="Recipe:" 
                                       FontSize="13" 
                                       Foreground="Gray"
                                       Margin="0,0,10,8"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                                <TextBlock x:Name="RecipeNameText" 
                                           Text="N/A" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           Foreground="White"
                                           Margin="0,0,10,8"/>
                                <TextBlock x:Name="RecipeVersionText" 
                                           Text="v1.0" 
                                           FontSize="12" 
                                           Foreground="#00d4ff"
                                           VerticalAlignment="Center"
                                           Margin="0,0,0,8"/>
                            </StackPanel>

                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Text="ID:" 
                                       FontSize="13" 
                                       Foreground="Gray"
                                       Margin="0,0,10,8"/>
                            <TextBlock x:Name="RecipeIdText" 
                                       Grid.Row="1" Grid.Column="1"
                                       Text="N/A" 
                                       FontSize="13" 
                                       Foreground="White"
                                       Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="2" Grid.Column="0"
                                       Text="Parameters:" 
                                       FontSize="13" 
                                       Foreground="Gray"
                                       Margin="0,0,10,0"/>
                            <TextBlock x:Name="ItemCountText" 
                                       Grid.Row="2" Grid.Column="1"
                                       Text="0 items" 
                                       FontSize="13" 
                                       Foreground="LimeGreen"
                                       FontWeight="Bold"/>
                        </Grid>
                    </Border>

                    <StackPanel x:Name="DetailsPanel">
                        <Border Background="#16213e" 
                                CornerRadius="5" 
                                Padding="12"
                                Margin="0,0,0,5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="Last Load:" 
                                           FontSize="12" 
                                           Foreground="Gray"
                                           Margin="0,0,10,0"/>
                                <TextBlock x:Name="LastLoadTimeText" 
                                           Grid.Column="1"
                                           Text="N/A" 
                                           FontSize="12" 
                                           Foreground="LightGray"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Recipe Selection Buttons -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <local:SecuredButton Grid.Column="0"
                                         x:Name="Recipe1Button"
                                         Content="Recipe 1"
                                         Theme="Primary"
                                         RequiredLevel="{Binding RequiredAccessLevel, ElementName=root}"
                                         Click="Recipe1Button_Click"
                                         Height="40"/>

                    <local:SecuredButton Grid.Column="2"
                                         x:Name="Recipe2Button"
                                         Content="Recipe 2"
                                         Theme="Primary"
                                         RequiredLevel="{Binding RequiredAccessLevel, ElementName=root}"
                                         Click="Recipe2Button_Click"
                                         Height="40"/>

                    <local:SecuredButton Grid.Column="4"
                                         x:Name="Recipe3Button"
                                         Content="Recipe 3"
                                         Theme="Primary"
                                         RequiredLevel="{Binding RequiredAccessLevel, ElementName=root}"
                                         Click="Recipe3Button_Click"
                                         Height="40"/>
                </Grid>

                <!-- Load Button -->
                <local:SecuredButton Grid.Row="2"
                                     x:Name="LoadButton"
                                     Content="Load Selected Recipe"
                                     Theme="Success"
                                     RequiredLevel="{Binding RequiredAccessLevel, ElementName=root}"
                                     Click="LoadButton_Click"
                                     Height="40"/>

            </Grid>
        </Grid>
    </Border>
</UserControl>
