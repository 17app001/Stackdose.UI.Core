<UserControl x:Class="Stackdose.UI.Templates.Pages.LogViewerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="1400"
             d:DesignHeight="900">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- ✅ 只為了 Designer：讓 VS 看到 Core Styles -->
                <ResourceDictionary Source="pack://application:,,,/Stackdose.UI.Core;component/Themes/Theme.xaml"/>

            </ResourceDictionary.MergedDictionaries>
            <!-- 左側日期項目：頁面專用 -->
            <Style x:Key="DateItemContainerStyle" TargetType="ListBoxItem">
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Margin" Value="0,0,0,12"/>
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBoxItem">
                            <Border x:Name="Bd"
                                Style="{StaticResource CardStyle}"
                                Padding="12"
                                Margin="0">
                                <ContentPresenter/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Bd" Property="Opacity" Value="0.92"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="Bd" Property="Opacity" Value="0.45"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ========================= Top Filter Bar ========================= -->
        <Border Grid.Row="0"
                Style="{StaticResource CardStyle}"
                Padding="14"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left : Chips + Date range -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <ToggleButton Style="{StaticResource ChipToggleStyle}"
                                  Background="#E85B4A"
                                  Content="Audit Trail"
                                  IsChecked="True"
                                  Margin="0,0,12,0"/>
                    <ToggleButton Style="{StaticResource ChipToggleStyle}"
                                  Background="#3AA0FF"
                                  Content="Operation"
                                  Margin="0,0,12,0"/>
                    <ToggleButton Style="{StaticResource ChipToggleStyle}"
                                  Background="#FFB020"
                                  Content="Event"
                                  Margin="0,0,12,0"/>
                    <ToggleButton Style="{StaticResource ChipToggleStyle}"
                                  Background="#3AC977"
                                  Content="Process"
                                  Margin="0,0,22,0"/>

                    <TextBlock Style="{StaticResource KvKeyStyle}"
                               Text="From"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>

                    <TextBox Width="140" Height="30" Margin="0,0,10,0"/>

                    <TextBlock Style="{StaticResource KvKeyStyle}"
                               Text="~"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>

                    <TextBox Width="140" Height="30"/>
                </StackPanel>

                <!-- Right : Actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Style="{StaticResource PillButtonStyle}"
                            Background="{StaticResource Button.Bg.Info}"
                            Content="查詢"
                            Margin="0,0,12,0"/>
                    <Button Style="{StaticResource PillButtonStyle}"
                            Background="#A78BFA"
                            Content="匯出 PDF"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ========================= Main Area ========================= -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ================= Left : Date List ================= -->
            <Border Grid.Column="0"
                    Style="{StaticResource CardStyle}"
                    Padding="16">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="日期列表"
                               Foreground="{StaticResource Cyber.Text.Main}"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,12"/>

                    <ListBox Grid.Row="1"
                             BorderThickness="0"
                             Background="Transparent"
                             ItemContainerStyle="{StaticResource DateItemContainerStyle}"
                             SelectedIndex="0">

                        <ListBoxItem>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="2025-01-12(日)"
                                           Foreground="{StaticResource Cyber.Text.Main}"
                                           FontSize="14"
                                           FontWeight="Bold"/>
                                <TextBlock Grid.Row="1"
                                           Text="今天 - 128 筆記錄"
                                           Foreground="{StaticResource Cyber.Text.Muted}"
                                           FontSize="12"
                                           Margin="0,4,0,0"/>
                            </Grid>
                        </ListBoxItem>

                        <ListBoxItem>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="2025-01-11(六)"
                                           Foreground="{StaticResource Cyber.Text.Main}"
                                           FontSize="14"
                                           FontWeight="Bold"/>
                                <TextBlock Grid.Row="1"
                                           Text="昨天 - 234 筆記錄"
                                           Foreground="{StaticResource Cyber.Text.Muted}"
                                           FontSize="12"
                                           Margin="0,4,0,0"/>
                            </Grid>
                        </ListBoxItem>

                        <ListBoxItem>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="2025-01-10(五)"
                                           Foreground="{StaticResource Cyber.Text.Main}"
                                           FontSize="14"
                                           FontWeight="Bold"/>
                                <TextBlock Grid.Row="1"
                                           Text="2 天前 - 198 筆記錄"
                                           Foreground="{StaticResource Cyber.Text.Muted}"
                                           FontSize="12"
                                           Margin="0,4,0,0"/>
                            </Grid>
                        </ListBoxItem>

                    </ListBox>
                </Grid>
            </Border>

            <!-- ================= Right : Log Cards ================= -->
            <Border Grid.Column="2"
                    Style="{StaticResource CardStyle}"
                    Padding="16">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="Audit Trail - 2025-01-12"
                                   Foreground="{StaticResource Cyber.Text.Main}"
                                   FontSize="16"
                                   FontWeight="Bold"/>
                        <TextBlock Text="  (共 45 筆記錄)"
                                   Foreground="{StaticResource Cyber.Text.Muted}"
                                   FontSize="12"
                                   VerticalAlignment="Bottom"
                                   Margin="8,0,0,1"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>

                            <!-- ====================== Log Card (完整明細卡) ====================== -->
                            <Border Style="{StaticResource CardStyle}"
                                    Padding="18"
                                    Margin="0,0,0,16">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource KvKeyStyle}" Text="Timestamp:"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource KvValueStyle}" Text="2025-01-12 14:30:25.123"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource KvKeyStyle}" Text="User ID:" Margin="0,10,10,0"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource KvValueStyle}" Text="Admin (管理員)" Margin="0,10,0,0"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource KvKeyStyle}" Text="Action:" Margin="0,10,10,0"/>
                                        <Border Grid.Row="2" Grid.Column="1"
                                                Background="{StaticResource Button.Bg.Error}"
                                                CornerRadius="7"
                                                Padding="10,4"
                                                Margin="0,10,0,0"
                                                HorizontalAlignment="Left">
                                            <TextBlock Text="Start Process"
                                                       Foreground="{StaticResource Button.Text}"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"/>
                                        </Border>

                                        <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource KvKeyStyle}" Text="Before Value:" Margin="0,10,10,0"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Style="{StaticResource KvValueStyle}" Text="Idle" Margin="0,10,0,0"/>

                                        <TextBlock Grid.Row="4" Grid.Column="0" Style="{StaticResource KvKeyStyle}" Text="After Value:" Margin="0,10,10,0"/>
                                        <TextBlock Grid.Row="4" Grid.Column="1" Style="{StaticResource KvValueStyle}" Text="Running" Margin="0,10,0,0"/>

                                        <TextBlock Grid.Row="5" Grid.Column="0" Style="{StaticResource KvKeyStyle}" Text="Reason:" Margin="0,10,10,0"/>
                                        <TextBlock Grid.Row="5" Grid.Column="1" Style="{StaticResource KvValueStyle}" Text="開始新批次生產" Margin="0,10,0,0"/>

                                        <TextBlock Grid.Row="6" Grid.Column="0" Style="{StaticResource KvKeyStyle}" Text="Batch ID:" Margin="0,10,10,0"/>
                                        <TextBlock Grid.Row="6" Grid.Column="1" Style="{StaticResource KvValueStyle}" Text="BATCH-2025011201-A" Margin="0,10,0,0"/>

                                        <TextBlock Grid.Row="7" Grid.Column="0" Style="{StaticResource KvKeyStyle}" Text="Parameter:" Margin="0,10,10,0"/>
                                        <TextBlock Grid.Row="7" Grid.Column="1" Style="{StaticResource KvValueStyle}" Text="Process.State" Margin="0,10,0,0"/>

                                        <TextBlock Grid.Row="8" Grid.Column="0" Style="{StaticResource KvKeyStyle}" Text="SHA-256:" Margin="0,10,10,0"/>
                                        <TextBlock Grid.Row="8" Grid.Column="1"
                                                   Foreground="{StaticResource Cyber.Text.Muted}"
                                                   FontFamily="Consolas"
                                                   FontSize="12"
                                                   TextWrapping="Wrap"
                                                   Margin="0,10,0,0"
                                                   Text="3a7bd3e2f4cd15b96a8f2d4c5b7e3a1..."/>
                                    </Grid>

                                    <Border Grid.Row="1"
                                            Height="3"
                                            Background="{StaticResource Button.Bg.Error}"
                                            Margin="-18,16,-18,-18"/>
                                </Grid>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
