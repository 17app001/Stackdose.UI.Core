<UserControl x:Class="WpfApp.Demo.Views.MachinePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Machine Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource CardBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="30"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="3D Printer Control"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Monitor and control your 3D tablet printing machine"
                               FontSize="16"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Machine Status -->
            <Border Grid.Row="1"
                    Background="{StaticResource DarkBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="30">
                <StackPanel>
                    <TextBlock Text="Machine Status"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,20"/>

                    <!-- Printer #1 -->
                    <Border Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="{StaticResource SuccessBrush}"
                            BorderThickness="2"
                            CornerRadius="10"
                            Padding="20"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="3D Printer #1 - Ready"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource SuccessBrush}"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Temperature: 25.0 C"
                                       FontSize="14"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Status: Ready for operation"
                                       FontSize="14"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Control Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Start Print"
                                Width="120"
                                Height="40"
                                Background="{StaticResource SuccessBrush}"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="14"
                                Cursor="Hand"
                                Margin="10"/>
                        <Button Content="Pause"
                                Width="120"
                                Height="40"
                                Background="{StaticResource WarningBrush}"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="14"
                                Cursor="Hand"
                                Margin="10"/>
                        <Button Content="Stop"
                                Width="120"
                                Height="40"
                                Background="{StaticResource ErrorBrush}"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="14"
                                Cursor="Hand"
                                Margin="10"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
