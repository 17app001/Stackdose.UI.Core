<Window x:Class="WpfApp1.Views.MachinePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Stackdose Control System - Machine Control"
        Height="900" Width="1600"
        WindowStyle="None"
        Background="#1a1a2e">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#16213e" 
                BorderBrush="#00d4ff" 
                BorderThickness="0,0,0,2">
            <Grid Margin="15,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo and System Title -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <Border Width="38" Height="38" 
                            Background="#00d4ff" 
                            CornerRadius="19"
                            Margin="0,0,12,0">
                        <TextBlock Text="S" 
                                   FontSize="22" 
                                   FontWeight="Bold"
                                   Foreground="#16213e"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="STACKDOSE 3D PRINTING SYSTEM" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Foreground="#00d4ff"/>
                        <TextBlock Text="3D Tablet Printer System" 
                                   FontSize="10" 
                                   Foreground="#7f8c8d"
                                   Margin="0,1,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Current Machine Display -->
                <StackPanel Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock x:Name="CurrentMachineTitle"
                               Text="3D Printer #1" 
                               FontSize="22" 
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Tablet Printer Unit A" 
                               FontSize="10" 
                               Foreground="#95a5a6"
                               HorizontalAlignment="Center"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <!-- User Info -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <Border Width="36" Height="36" 
                            Background="#34495e" 
                            CornerRadius="18"
                            Margin="0,0,8,0">
                        <TextBlock Text="A" 
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel VerticalAlignment="Center" Margin="0,0,12,0">
                        <TextBlock Text="Admin" 
                                   FontSize="13" 
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Administrator" 
                                   FontSize="10" 
                                   Foreground="#95a5a6"/>
                    </StackPanel>

                    <Button Content="Logout" 
                            Width="70" 
                            Height="30"
                            Background="#e74c3c"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="11"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#c0392b"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Navigation -->
            <Border Grid.Column="0" 
                    Background="#0f3460" 
                    BorderBrush="#00d4ff" 
                    BorderThickness="0,0,2,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,20,0,20">
                        <!-- Function Menu Title -->
                        <TextBlock Text="功能選單" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="#00d4ff"
                                   Margin="20,0,0,20"/>

                        <!-- Home Overview -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Cursor="Hand">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1e2a47"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Margin="15,12">
                                <TextBlock Text="主畫面" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                                <TextBlock Text="Home Dashboard" 
                                           FontSize="10" 
                                           Foreground="#95a5a6"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Process Management - Selected -->
                        <Border Background="#1e2a47" 
                                Margin="10,5"
                                CornerRadius="8"
                                BorderBrush="#00d4ff"
                                BorderThickness="2"
                                Cursor="Hand">
                            <StackPanel Margin="15,12">
                                <TextBlock Text="程序管理" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="#00d4ff"/>
                                <TextBlock Text="Process Management" 
                                           FontSize="10" 
                                           Foreground="#00d4ff"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Log Viewer -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Cursor="Hand">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1e2a47"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Margin="15,12">
                                <TextBlock Text="日誌檢視器" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                                <TextBlock Text="Log Viewer" 
                                           FontSize="10" 
                                           Foreground="#95a5a6"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- User Management -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Cursor="Hand">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1e2a47"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Margin="15,12">
                                <TextBlock Text="使用者管理" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                                <TextBlock Text="User Management" 
                                           FontSize="10" 
                                           Foreground="#95a5a6"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- System Settings -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Cursor="Hand">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1e2a47"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Margin="15,12">
                                <TextBlock Text="系統設定" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                                <TextBlock Text="System Settings" 
                                           FontSize="10" 
                                           Foreground="#95a5a6"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Divider -->
                        <Border Height="2" 
                                Background="#34495e" 
                                Margin="20,30,20,20"/>

                        <!-- Print Information Section -->
                        <TextBlock Text="列印資訊" 
                                   FontSize="14" 
                                   FontWeight="Bold"
                                   Foreground="#95a5a6"
                                   Margin="20,0,0,15"/>

                        <!-- Batch Number -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="批號" 
                                           FontSize="11" 
                                           Foreground="#95a5a6"/>
                                <TextBlock Text="BATCH-2025011201-A" 
                                           FontSize="13" 
                                           FontWeight="Bold"
                                           Foreground="#f39c12"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Recipe Name -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="配方" 
                                           FontSize="11" 
                                           Foreground="#95a5a6"/>
                                <TextBlock Text="Recipe_A_Standard" 
                                           FontSize="13" 
                                           FontWeight="Bold"
                                           Foreground="White"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Print Time -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="列印時間" 
                                           FontSize="11" 
                                           Foreground="#95a5a6"/>
                                <TextBlock Text="00:15:32" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           Foreground="#2ecc71"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Current Layer -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="當前層數" 
                                           FontSize="11" 
                                           Foreground="#95a5a6"/>
                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                    <TextBlock Text="25" 
                                               FontSize="18" 
                                               FontWeight="Bold"
                                               Foreground="#00d4ff"/>
                                    <TextBlock Text=" / 100" 
                                               FontSize="14" 
                                               Foreground="#7f8c8d"
                                               VerticalAlignment="Bottom"
                                               Margin="3,0,0,2"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Print Progress -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Padding="15,10">
                            <StackPanel>
                                <Grid Margin="0,0,0,5">
                                    <TextBlock Text="進度" 
                                               FontSize="11" 
                                               Foreground="#95a5a6"
                                               HorizontalAlignment="Left"/>
                                    <TextBlock Text="25%" 
                                               FontSize="11" 
                                               FontWeight="Bold"
                                               Foreground="#00d4ff"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                                <Border Background="#0f3460"
                                        Height="8"
                                        CornerRadius="4">
                                    <Border Background="#00d4ff"
                                            Width="60"
                                            HorizontalAlignment="Left"
                                            CornerRadius="4"/>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Divider -->
                        <Border Height="2" 
                                Background="#34495e" 
                                Margin="20,20,20,20"/>

                        <!-- System Status Section -->
                        <TextBlock Text="System Status" 
                                   FontSize="14" 
                                   FontWeight="Bold"
                                   Foreground="#95a5a6"
                                   Margin="20,0,0,15"/>

                        <!-- Current Status -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="Current Status" 
                                           FontSize="11" 
                                           Foreground="#95a5a6"/>
                                <TextBlock Text="PRINTING" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           Foreground="#2ecc71"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Total Production -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="Total Production" 
                                           FontSize="11" 
                                           Foreground="#95a5a6"/>
                                <TextBlock Text="1,250 tablets" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           Foreground="White"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Active Alarms -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="Active Alarms" 
                                           FontSize="11" 
                                           Foreground="#95a5a6"/>
                                <TextBlock Text="0" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           Foreground="#2ecc71"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Content Area -->
            <Grid Grid.Column="1" Background="#1a1a2e">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- NEW: Machine Selector Bar at Top -->
                <Border Grid.Row="0"
                        Background="#16213e"
                        BorderBrush="#00d4ff"
                        BorderThickness="2"
                        CornerRadius="10"
                        Margin="15,15,15,10">
                    <Grid Margin="15,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Machine Switch Buttons -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="MACHINE SELECT" 
                                       FontSize="11" 
                                       FontWeight="Bold"
                                       Foreground="#95a5a6"
                                       VerticalAlignment="Center"
                                       Margin="0,0,15,0"/>

                            <!-- Machine 1 Button - Selected -->
                            <Border x:Name="Machine1ButtonTop"
                                    Background="#1e2a47"
                                    BorderBrush="#2ecc71"
                                    BorderThickness="2"
                                    CornerRadius="6"
                                    Padding="15,8"
                                    Margin="0,0,10,0"
                                    Cursor="Hand">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#243447"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Status Light -->
                                    <Ellipse Grid.Column="0"
                                             Width="10" Height="10"
                                             Fill="#2ecc71"
                                             Margin="0,0,8,0"
                                             VerticalAlignment="Center">
                                        <Ellipse.Effect>
                                            <DropShadowEffect Color="#2ecc71" BlurRadius="6" ShadowDepth="0"/>
                                        </Ellipse.Effect>
                                    </Ellipse>

                                    <!-- Machine Name -->
                                    <TextBlock Grid.Column="1"
                                               Text="MACHINE #1"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"/>

                                    <!-- Current Badge -->
                                    <Border Grid.Column="2"
                                            Background="#00d4ff"
                                            CornerRadius="3"
                                            Padding="6,2">
                                        <TextBlock Text="CURRENT"
                                                   FontSize="8"
                                                   FontWeight="Bold"
                                                   Foreground="#16213e"/>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- Machine 2 Button -->
                            <Border x:Name="Machine2ButtonTop"
                                    Background="#0f3460"
                                    BorderBrush="#34495e"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="15,8"
                                    Cursor="Hand">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1e2a47"/>
                                                <Setter Property="BorderBrush" Value="#00d4ff"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Status Light -->
                                    <Ellipse Grid.Column="0"
                                             Width="10" Height="10"
                                             Fill="#95a5a6"
                                             Margin="0,0,8,0"
                                             VerticalAlignment="Center"/>

                                    <!-- Machine Name -->
                                    <TextBlock Grid.Column="1"
                                               Text="MACHINE #2"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="#95a5a6"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Current Batch Info (Center) -->
                        <StackPanel Grid.Column="1" 
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock Text="BATCH: " 
                                       FontSize="10" 
                                       Foreground="#95a5a6"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="BATCH-2025011201-A" 
                                       FontSize="11" 
                                       FontWeight="Bold"
                                       Foreground="#f39c12"
                                       VerticalAlignment="Center"
                                       Margin="5,0,20,0"/>

                            <TextBlock Text="LAYER: " 
                                       FontSize="10" 
                                       Foreground="#95a5a6"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="25/100" 
                                       FontSize="11" 
                                       FontWeight="Bold"
                                       Foreground="#00d4ff"
                                       VerticalAlignment="Center"
                                       Margin="5,0,20,0"/>

                            <TextBlock Text="TIME: " 
                                       FontSize="10" 
                                       Foreground="#95a5a6"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="00:15:32" 
                                       FontSize="11" 
                                       FontWeight="Bold"
                                       Foreground="#2ecc71"
                                       VerticalAlignment="Center"
                                       Margin="5,0,0,0"/>
                        </StackPanel>

                        <!-- Quick Stats (Right) -->
                        <StackPanel Grid.Column="2" 
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <Border Background="#0f3460"
                                    BorderBrush="#00d4ff"
                                    BorderThickness="1"
                                    CornerRadius="5"
                                    Padding="10,5"
                                    Margin="0,0,5,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="PROGRESS: " 
                                               FontSize="10" 
                                               Foreground="#95a5a6"/>
                                    <TextBlock Text="25%" 
                                               FontSize="11" 
                                               FontWeight="Bold"
                                               Foreground="#00d4ff"
                                               Margin="5,0,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#0f3460"
                                    BorderBrush="#2ecc71"
                                    BorderThickness="1"
                                    CornerRadius="5"
                                    Padding="10,5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="STATUS: " 
                                               FontSize="10" 
                                               Foreground="#95a5a6"/>
                                    <TextBlock Text="PRINTING" 
                                               FontSize="11" 
                                               FontWeight="Bold"
                                               Foreground="#2ecc71"
                                               Margin="5,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Control Panels Row -->
                <Grid Grid.Row="1" Margin="15,0,15,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- PLC Status Panel -->
                    <Border Grid.Column="0" 
                            Background="#16213e"
                            BorderBrush="#00d4ff"
                            BorderThickness="2"
                            CornerRadius="10"
                            Margin="0,0,8,0">
                        <StackPanel Margin="15">
                            <TextBlock Text="PLC Status" 
                                       FontSize="14" 
                                       FontWeight="Bold"
                                       Foreground="#00d4ff"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="PLC Status shown in top bar" 
                                       FontSize="10" 
                                       Foreground="#95a5a6"
                                       Margin="0,0,0,15"/>

                            <!-- Control Buttons -->
                            <Button Content="Start Process" 
                                    Height="40"
                                    Background="#2ecc71"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="13"
                                    FontWeight="Bold"
                                    Cursor="Hand"
                                    Margin="0,5">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="5">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#27ae60"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Content="Stop Process" 
                                    Height="40"
                                    Background="#3498db"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="13"
                                    FontWeight="Bold"
                                    Cursor="Hand"
                                    Margin="0,5">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="5">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2980b9"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Content="Clean Start" 
                                    Height="40"
                                    Background="#f39c12"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="13"
                                    FontWeight="Bold"
                                    Cursor="Hand"
                                    Margin="0,5">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="5">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#e67e22"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Content="Clean Stop" 
                                    Height="40"
                                    Background="#e74c3c"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="13"
                                    FontWeight="Bold"
                                    Cursor="Hand"
                                    Margin="0,5">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="5">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#c0392b"/>
