<UserControl x:Class="Stackdose.UI.Core.Controls.AlarmViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stackdose.UI.Core.Controls"
             mc:Ignorable="d" 
             MinHeight="200" MinWidth="300"
             d:DesignHeight="400" d:DesignWidth="600">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Stackdose.UI.Core;component/Themes/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <DataTemplate x:Key="AlarmItemTemplate">
                <Border BorderBrush="{DynamicResource Log.Border}" 
                        BorderThickness="1" 
                        CornerRadius="6" 
                        Margin="6,3" 
                        Padding="12,10">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="{DynamicResource Log.Bg.Main}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsActive}" Value="True">
                                    <Setter Property="Background" Value="#1AFF5252"/>
                                    <Setter Property="BorderBrush" Value="{DynamicResource Status.Error}"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Alarm Indicator -->
                        <Border Grid.Column="0" 
                                Width="40" Height="40"
                                CornerRadius="20"
                                Margin="0,0,12,0" 
                                VerticalAlignment="Center">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="{DynamicResource Status.Success}"/>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#4CAF50" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource Status.Error}"/>
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="#FF5252" BlurRadius="15" ShadowDepth="0" Opacity="0.8"/>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       FontSize="20"
                                       FontWeight="Bold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="?"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                <Setter Property="Text" Value="!"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>

                        <!-- Alarm Description -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding OperationDescription}" 
                                       FontSize="14" 
                                       FontWeight="SemiBold"
                                       FontFamily="Microsoft JhengHei"
                                       TextTrimming="CharacterEllipsis">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{DynamicResource Sensor.Text.Label}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                <Setter Property="Foreground" Value="{DynamicResource Status.Error}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="{Binding Group}" 
                                       Foreground="{DynamicResource Plc.Text.Gray}"
                                       FontSize="10"
                                       FontFamily="Consolas"
                                       Margin="0,2,0,0"/>
                        </StackPanel>

                        <!-- PLC Address -->
                        <Border Grid.Column="2" 
                                Background="{DynamicResource Plc.Bg.Dark}" 
                                BorderBrush="{DynamicResource Plc.Border}"
                                BorderThickness="1"
                                CornerRadius="4" 
                                Padding="8,4"
                                Margin="12,0,0,0"
                                VerticalAlignment="Center">
                            <TextBlock Foreground="{DynamicResource Plc.Text.Label}" 
                                       FontSize="11" 
                                       FontFamily="Consolas"
                                       VerticalAlignment="Center">
                                <Run Text="("/>
                                <Run Text="{Binding Device}" Foreground="{DynamicResource Plc.Text.Value}"/>
                                <Run Text="{Binding Bit, StringFormat='.{0}'}" Foreground="{DynamicResource Status.Warning}"/>
                                <Run Text=")"/>
                            </TextBlock>
                        </Border>

                        <!-- Last Update Time -->
                        <TextBlock Grid.Column="3" 
                                   Text="{Binding LastUpdate, StringFormat='HH:mm:ss'}" 
                                   Foreground="{DynamicResource Plc.Text.Default}" 
                                   FontSize="10" 
                                   FontFamily="Consolas"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0"/>
                    </Grid>
                </Border>
            </DataTemplate>

            <Style x:Key="GroupHeaderStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{DynamicResource Sensor.Text.Title}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontFamily" Value="Microsoft JhengHei"/>
                <Setter Property="Margin" Value="8,12,8,6"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="#FF5252" BlurRadius="5" ShadowDepth="0" Opacity="0.3"/>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{DynamicResource Sensor.Bg.Main}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Bar -->
        <Border Grid.Row="0" 
                Background="{DynamicResource Sensor.Bg.Header}" 
                BorderBrush="{DynamicResource Sensor.Border}"
                BorderThickness="0,0,0,1"
                Padding="12,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="?" 
                               Foreground="{DynamicResource Status.Error}"
                               FontSize="20"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                               Foreground="{DynamicResource Sensor.Text.Title}" 
                               FontSize="16" 
                               FontWeight="Bold"
                               FontFamily="Microsoft JhengHei"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Show Active Only Checkbox -->
                <CheckBox Grid.Column="1" 
                          x:Name="ChkShowAlarmsOnly"
                          Content="Active Only" 
                          Foreground="{DynamicResource Sensor.Text.Label}" 
                          FontSize="12"
                          FontFamily="Microsoft JhengHei"
                          VerticalAlignment="Center"
                          Margin="0,0,20,0"
                          Checked="ChkShowAlarmsOnly_Changed"
                          Unchecked="ChkShowAlarmsOnly_Changed">
                    <CheckBox.Style>
                        <Style TargetType="CheckBox">
                            <Setter Property="Cursor" Value="Hand"/>
                        </Style>
                    </CheckBox.Style>
                </CheckBox>

                <!-- Statistics -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{DynamicResource Status.Error}" 
                            CornerRadius="4" 
                            Padding="8,4" 
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Active: " 
                                       Foreground="White" 
                                       FontSize="11" 
                                       FontWeight="Bold"
                                       FontFamily="Consolas"/>
                            <TextBlock x:Name="TxtAlarmCount" 
                                       Text="0" 
                                       Foreground="White" 
                                       FontSize="11" 
                                       FontWeight="Bold"
                                       FontFamily="Consolas"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="{DynamicResource Status.Info}" 
                            CornerRadius="4" 
                            Padding="8,4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Total: " 
                                       Foreground="White" 
                                       FontSize="11" 
                                       FontWeight="Bold"
                                       FontFamily="Consolas"/>
                            <TextBlock x:Name="TxtTotalCount" 
                                       Text="0" 
                                       Foreground="White" 
                                       FontSize="11" 
                                       FontWeight="Bold"
                                       FontFamily="Consolas"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Alarm List -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Background="{DynamicResource Sensor.Bg.Main}"
                      Padding="4">
            <ItemsControl x:Name="AlarmList" ItemTemplate="{StaticResource AlarmItemTemplate}">
                <ItemsControl.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource Sensor.Bg.Header}" 
                                        BorderBrush="{DynamicResource Sensor.Border}"
                                        BorderThickness="1"
                                        CornerRadius="4" 
                                        Padding="8,4" 
                                        Margin="4,8,4,2">
                                    <TextBlock Text="{Binding Name}" Style="{StaticResource GroupHeaderStyle}"/>
                                </Border>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ItemsControl.GroupStyle>
            </ItemsControl>
        </ScrollViewer>

        <!-- No Data Hint -->
        <Border Grid.Row="1" 
                Background="{DynamicResource Sensor.Bg.Main}"
                Visibility="Collapsed" 
                x:Name="NoDataHint">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="[NO ALARMS]" 
                           FontSize="48" 
                           Foreground="{DynamicResource Plc.Text.Default}"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,12"/>
                <TextBlock Text="No alarms configured" 
                           Foreground="{DynamicResource Sensor.Text.Label}" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           FontFamily="Microsoft JhengHei"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Please set ConfigFile property" 
                           Foreground="{DynamicResource Plc.Text.Default}" 
                           FontSize="12" 
                           FontStyle="Italic"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
