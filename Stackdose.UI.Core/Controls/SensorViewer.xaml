<UserControl x:Class="Stackdose.UI.Core.Controls.SensorViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stackdose.UI.Core.Controls"
             mc:Ignorable="d" 
             MinHeight="200" MinWidth="300"
             d:DesignHeight="400" d:DesignWidth="500">
    
    <UserControl.Resources>
        <DataTemplate x:Key="SensorItemTemplate">
            <Border BorderBrush="#444" BorderThickness="1" 
                    Background="#2A2A2A" CornerRadius="6" 
                    Margin="6,3" Padding="12,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- æŒ‡ç¤ºç‡ˆ -->
                        <ColumnDefinition Width="*"/>
                        <!-- æè¿° -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- ä½å€ -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- æ™‚é–“ -->
                    </Grid.ColumnDefinitions>

                    <!-- ç‹€æ…‹æŒ‡ç¤ºç‡ˆ (åŠ å¤§) -->
                    <Ellipse Grid.Column="0" Width="14" Height="14" 
                             Margin="0,0,12,0" VerticalAlignment="Center">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="#4CAF50"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#4CAF50" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                        <Setter Property="Fill" Value="#FF5252"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#FF5252" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>

                    <!-- æ“ä½œæè¿° (åŠ å¤§å­—é«”) -->
                    <TextBlock Grid.Column="1" 
                               Text="{Binding OperationDescription}" 
                               Foreground="#EEEEEE" 
                               FontSize="14" 
                               FontWeight="Medium"
                               FontFamily="Microsoft JhengHei, Segoe UI, Arial"
                               VerticalAlignment="Center"
                               TextTrimming="CharacterEllipsis"/>

                    <!-- PLC ä½å€ (å„ªåŒ–é¡¯ç¤º) -->
                    <Border Grid.Column="2" 
                            Background="#1A1A1A" 
                            CornerRadius="3" 
                            Padding="8,4"
                            Margin="12,0,0,0"
                            VerticalAlignment="Center">
                        <TextBlock Foreground="#888" 
                                   FontSize="11" 
                                   FontFamily="Consolas"
                                   VerticalAlignment="Center">
                            <Run Text="("/>
                            <Run Text="{Binding Device}" Foreground="#00A8E8"/>
                            <Run Text="{Binding Bit, StringFormat='.{0}', Mode=OneWay}" Foreground="#FFA726"/>
                            <Run Text=")"/>
                        </TextBlock>
                    </Border>

                    <!-- æœ€å¾Œæ›´æ–°æ™‚é–“ -->
                    <TextBlock Grid.Column="3" 
                               Text="{Binding LastUpdate, StringFormat='HH:mm:ss'}" 
                               Foreground="#666" 
                               FontSize="10" 
                               FontFamily="Consolas"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"/>
                </Grid>
            </Border>
        </DataTemplate>

        <Style x:Key="GroupHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#00A8E8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Microsoft JhengHei, Segoe UI, Arial"/>
            <Setter Property="Margin" Value="8,12,8,6"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#00A8E8" BlurRadius="5" ShadowDepth="0" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- æ¨™é¡Œåˆ— (å„ªåŒ–) -->
        <Border Grid.Row="0" Background="#2D2D2D" Padding="12,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- æ¨™é¡Œ (åŠ å¤§) -->
                <TextBlock Grid.Column="0" 
                           Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           Foreground="#EEEEEE" 
                           FontSize="16" 
                           FontWeight="Bold"
                           FontFamily="Microsoft JhengHei, Segoe UI, Arial"
                           VerticalAlignment="Center"/>

                <!-- åƒ…é¡¯ç¤ºç•°å¸¸ Checkbox (å„ªåŒ–æ¨£å¼) -->
                <CheckBox Grid.Column="1" 
                          x:Name="ChkShowAlarmsOnly"
                          Content="Only Sensor ON" 
                          Foreground="#DDD" 
                          FontSize="12"
                          FontFamily="Microsoft JhengHei, Segoe UI, Arial"
                          VerticalAlignment="Center"
                          Margin="0,0,20,0"
                          Checked="ChkShowAlarmsOnly_Changed"
                          Unchecked="ChkShowAlarmsOnly_Changed">
                    <CheckBox.Style>
                        <Style TargetType="CheckBox">
                            <Setter Property="Cursor" Value="Hand"/>
                        </Style>
                    </CheckBox.Style>
                </CheckBox>

                <!-- çµ±è¨ˆè³‡è¨Š (å„ªåŒ–é¡¯ç¤º) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#FF5252" CornerRadius="3" Padding="6,3" Margin="0,0,4,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Alarm: " Foreground="White" FontSize="11" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtAlarmCount" Text="0" Foreground="White" FontSize="11" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    
                    <TextBlock Text=" / " Foreground="#666" FontSize="12" Margin="4,0"/>
                    
                    <Border Background="#4CAF50" CornerRadius="3" Padding="6,3" Margin="4,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Total: " Foreground="White" FontSize="11" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtTotalCount" Text="0" Foreground="White" FontSize="11" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- æ„Ÿæ¸¬å™¨åˆ—è¡¨ (å„ªåŒ– ScrollViewer) -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Background="#1A1A1A"
                      Padding="4">
            <ItemsControl x:Name="SensorList" ItemTemplate="{StaticResource SensorItemTemplate}">
                <ItemsControl.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <Border Background="#252525" CornerRadius="4" Padding="8,4" Margin="4,8,4,2">
                                    <TextBlock Text="{Binding Name}" Style="{StaticResource GroupHeaderStyle}"/>
                                </Border>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ItemsControl.GroupStyle>
            </ItemsControl>
        </ScrollViewer>

        <!-- ç„¡è³‡æ–™æç¤º (å„ªåŒ–é¡¯ç¤º) -->
        <Border Grid.Row="1" 
                Background="#1A1A1A"
                Visibility="Collapsed" 
                x:Name="NoDataHint">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="ðŸ“­" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                <TextBlock Text="No sensors configured" 
                           Foreground="#888" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           FontFamily="Microsoft JhengHei, Segoe UI, Arial"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Please set ConfigFile property" 
                           Foreground="#666" 
                           FontSize="12" 
                           FontStyle="Italic"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
