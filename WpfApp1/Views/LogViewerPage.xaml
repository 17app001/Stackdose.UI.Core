<Window x:Class="WpfApp1.Views.LogViewerPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Stackdose Control System - Log Viewer"
        Height="900" Width="1600"
        WindowStyle="None"
        Background="#1a1a2e">

    <!-- 整體 Grid 布局：Header, Content, Footer -->
    <Grid>
        <Grid.RowDefinitions>
            <!-- Header 區域 -->
            <RowDefinition Height="60"/>
            <!-- 主內容區域 -->
            <RowDefinition Height="*"/>
            <!-- Bottom Bar 區域 -->
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <!-- ==================== -->
        <!-- Header 區域（類似 CyberFrame） -->
        <!-- ==================== -->
        <Border Grid.Row="0" 
                Background="#16213e" 
                BorderBrush="#00d4ff" 
                BorderThickness="0,0,0,2">
            <Grid Margin="15,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo 和標題 -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <!-- Logo 圖示 -->
                    <Border Width="38" Height="38" 
                            Background="#00d4ff" 
                            CornerRadius="19"
                            Margin="0,0,12,0">
                        <TextBlock Text="S" 
                                   FontSize="22" 
                                   FontWeight="Bold"
                                   Foreground="#16213e"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- 系統標題 -->
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="STACKDOSE 3D PRINTING SYSTEM" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Foreground="#00d4ff"/>
                        <TextBlock Text="3D 列印藥錠智慧製程系統" 
                                   FontSize="10" 
                                   Foreground="#7f8c8d"
                                   Margin="0,1,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- 中間當前頁面名稱 -->
                <StackPanel Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="Log 檢視" 
                               FontSize="22" 
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- 右側使用者資訊 -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <!-- 使用者頭像 -->
                    <Border Width="36" Height="36" 
                            Background="#34495e" 
                            CornerRadius="18"
                            Margin="0,0,8,0">
                        <TextBlock Text="A" 
                                   FontSize="20"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- 使用者資訊 -->
                    <StackPanel VerticalAlignment="Center" Margin="0,0,12,0">
                        <TextBlock Text="Admin" 
                                   FontSize="13" 
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="管理員" 
                                   FontSize="10" 
                                   Foreground="#95a5a6"/>
                    </StackPanel>

                    <!-- 登出按鈕 -->
                    <Button Content="登出" 
                            Width="70" 
                            Height="30"
                            Background="#e74c3c"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="11"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#c0392b"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ==================== -->
        <!-- 主內容區域：左側導航 + 右側 Log 檢視 -->
        <!-- ==================== -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- 左側功能列表 (1/5) -->
                <ColumnDefinition Width="1*"/>
                <!-- 右側 Log 檢視 (4/5) -->
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <!-- ==================== -->
            <!-- 左側功能導航列表 -->
            <!-- ==================== -->
            <Border Grid.Column="0" 
                    Background="#0f3460" 
                    BorderBrush="#00d4ff" 
                    BorderThickness="0,0,2,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,20,0,0">
                        <!-- 導航標題 -->
                        <TextBlock Text="功能選單" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="#00d4ff"
                                   Margin="20,0,0,20"/>

                        <!-- 首頁 Overview -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Cursor="Hand">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1e2a47"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Margin="15,12">
                                <TextBlock Text="首頁 Overview" 
                                           FontSize="15" 
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                                <TextBlock Text="Home Dashboard" 
                                           FontSize="9" 
                                           Foreground="#95a5a6"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- 製程管理 -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Cursor="Hand">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1e2a47"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Margin="15,12">
                                <TextBlock Text="製程管理" 
                                           FontSize="15" 
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                                <TextBlock Text="Process Management" 
                                           FontSize="9" 
                                           Foreground="#95a5a6"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Log 檢視 - 已選取 -->
                        <Border Background="#1e2a47" 
                                Margin="10,5"
                                CornerRadius="8"
                                BorderBrush="#00d4ff"
                                BorderThickness="2"
                                Cursor="Hand">
                            <StackPanel Margin="15,12">
                                <TextBlock Text="Log 檢視" 
                                           FontSize="15" 
                                           FontWeight="SemiBold"
                                           Foreground="#00d4ff"/>
                                <TextBlock Text="Log Viewer" 
                                           FontSize="9" 
                                           Foreground="#00d4ff"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- 使用者管理 -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Cursor="Hand">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1e2a47"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Margin="15,12">
                                <TextBlock Text="使用者管理" 
                                           FontSize="15" 
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                                <TextBlock Text="User Management" 
                                           FontSize="9" 
                                           Foreground="#95a5a6"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- 系統設定 -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Cursor="Hand">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1e2a47"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Margin="15,12">
                                <TextBlock Text="系統設定" 
                                           FontSize="15" 
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                                <TextBlock Text="System Settings" 
                                           FontSize="9" 
                                           Foreground="#95a5a6"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- 分隔線 -->
                        <Border Height="2" 
                                Background="#34495e" 
                                Margin="20,30,20,20"/>

                        <!-- Log 統計資訊 -->
                        <TextBlock Text="Log 統計" 
                                   FontSize="14" 
                                   FontWeight="Bold"
                                   Foreground="#95a5a6"
                                   Margin="20,0,0,15"/>

                        <!-- Audit Trail 數量 -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="Audit Trail" 
                                           FontSize="11" 
                                           Foreground="#95a5a6"/>
                                <TextBlock Text="1,234 筆" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           Foreground="#e74c3c"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Operation Log 數量 -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="Operation Log" 
                                           FontSize="11" 
                                           Foreground="#95a5a6"/>
                                <TextBlock Text="856 筆" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           Foreground="#3498db"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Event Log 數量 -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="Event Log" 
                                           FontSize="11" 
                                           Foreground="#95a5a6"/>
                                <TextBlock Text="342 筆" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           Foreground="#f39c12"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Process Data Log 數量 -->
                        <Border Background="#16213e" 
                                Margin="10,5"
                                CornerRadius="8"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="Process Data" 
                                           FontSize="11" 
                                           Foreground="#95a5a6"/>
                                <TextBlock Text="5,678 筆" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           Foreground="#2ecc71"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- ==================== -->
            <!-- 右側 Log 檢視區域 -->
            <!-- ==================== -->
            <Border Grid.Column="1" Background="#1a1a2e">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 篩選與操作區域 -->
                    <Border Grid.Row="0"
                            Background="#16213e"
                            BorderBrush="#00d4ff"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="15,12"
                            Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Log 類型選擇 -->
                            <!-- Audit Trail -->
                            <Border Grid.Column="0"
                                    Background="#e74c3c" 
                                    CornerRadius="6" 
                                    Padding="12,6"
                                    Margin="0,0,8,0"
                                    Cursor="Hand">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#c0392b"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="" FontSize="12" Margin="0,0,5,0"/>
                                    <TextBlock Text="Audit Trail" 
                                               Foreground="White" 
                                               FontSize="11"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>

                            <!-- Operation Log -->
                            <Border Grid.Column="1"
                                    Background="#3498db" 
                                    CornerRadius="6" 
                                    Padding="12,6"
                                    Margin="0,0,8,0"
                                    Cursor="Hand">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2980b9"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="" FontSize="12" Margin="0,0,5,0"/>
                                    <TextBlock Text="Operation" 
                                               Foreground="White" 
                                               FontSize="11"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>

                            <!-- Event Log -->
                            <Border Grid.Column="2"
                                    Background="#f39c12" 
                                    CornerRadius="6" 
                                    Padding="12,6"
                                    Margin="0,0,8,0"
                                    Cursor="Hand">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#e67e22"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="?" FontSize="12" Margin="0,0,5,0"/>
                                    <TextBlock Text="Event" 
                                               Foreground="White" 
                                               FontSize="11"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>

                            <!-- Process Data Log -->
                            <Border Grid.Column="3"
                                    Background="#2ecc71" 
                                    CornerRadius="6" 
                                    Padding="12,6"
                                    Margin="0,0,20,0"
                                    Cursor="Hand">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#27ae60"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="" FontSize="12" Margin="0,0,5,0"/>
                                    <TextBlock Text="Process" 
                                               Foreground="White" 
                                               FontSize="11"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>

                            <!-- 分隔線 -->
                            <Border Grid.Column="4"
                                    Width="2"
                                    Background="#34495e"
                                    Margin="0,2,20,2"/>

                            <!-- 日期篩選 -->
                            <StackPanel Grid.Column="5" Orientation="Horizontal">
                                <!-- 開始日期 -->
                                <Border Background="#0f3460"
                                        BorderBrush="#00d4ff"
                                        BorderThickness="1"
                                        CornerRadius="5"
                                        Padding="8,5"
                                        Margin="0,0,8,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="??" FontSize="11" Margin="0,0,5,0"/>
                                        <TextBlock Text="2025-01-01" 
                                                   Foreground="White" 
                                                   FontSize="11"/>
                                    </StackPanel>
                                </Border>

                                <TextBlock Text="~" 
                                           FontSize="13" 
                                           Foreground="#95a5a6"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>

                                <!-- 結束日期 -->
                                <Border Background="#0f3460"
                                        BorderBrush="#00d4ff"
                                        BorderThickness="1"
                                        CornerRadius="5"
                                        Padding="8,5"
                                        Margin="0,0,10,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="??" FontSize="11" Margin="0,0,5,0"/>
                                        <TextBlock Text="2025-01-12" 
                                                   Foreground="White" 
                                                   FontSize="11"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- 查詢按鈕 -->
                            <Button Grid.Column="6"
                                    Content=" 查詢" 
                                    Width="80" 
                                    Height="28"
                                    Background="#00d4ff"
                                    Foreground="#16213e"
                                    BorderThickness="0"
                                    FontSize="11"
                                    FontWeight="Bold"
                                    Cursor="Hand"
                                    Margin="0,0,8,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="5"
                                                            BorderThickness="0">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#0abde3"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- 匯出按鈕 -->
                            <Button Grid.Column="7"
                                    Content=" 匯出 PDF" 
                                    Width="100" 
                                    Height="28"
                                    Background="#9b59b6"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="11"
                                    FontWeight="Bold"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="5"
                                                            BorderThickness="0">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#8e44ad"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Log 內容顯示區域 -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 左側：日期列表 -->
                        <Border Grid.Column="0"
                                Background="#16213e"
                                BorderBrush="#00d4ff"
                                BorderThickness="1"
                                CornerRadius="10"
                                Margin="0,0,10,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- 標題 -->
                                <Border Grid.Row="0"
                                        Background="#0f3460"
                                        Padding="15,12"
                                        CornerRadius="10,10,0,0">
                                    <TextBlock Text="日期列表" 
                                               FontSize="14" 
                                               FontWeight="Bold"
                                               Foreground="#00d4ff"/>
                                </Border>

                                <!-- 日期清單 -->
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <StackPanel Margin="10">
                                        <!-- 2025-01-12 -->
                                        <Border Background="#1e2a47"
                                                BorderBrush="#00d4ff"
                                                BorderThickness="2"
                                                CornerRadius="8"
                                                Padding="12"
                                                Margin="0,5"
                                                Cursor="Hand">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="2025-01-12 (日)" 
                                                               FontSize="13" 
                                                               FontWeight="Bold"
                                                               Foreground="#00d4ff"/>
                                                    <TextBlock Text="今天 · 128 筆記錄" 
                                                               FontSize="10" 
                                                               Foreground="#95a5a6"
                                                               Margin="0,3,0,0"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="1"
                                                           Text="?" 
                                                           FontSize="16" 
                                                           Foreground="#00d4ff"
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>

                                        <!-- 2025-01-11 -->
                                        <Border Background="#0f3460"
                                                BorderBrush="#34495e"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                                Padding="12"
                                                Margin="0,5"
                                                Cursor="Hand">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#1e2a47"/>
                                                            <Setter Property="BorderBrush" Value="#00d4ff"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="2025-01-11 (六)" 
                                                               FontSize="13" 
                                                               FontWeight="SemiBold"
                                                               Foreground="White"/>
                                                    <TextBlock Text="昨天 · 234 筆記錄" 
                                                               FontSize="10" 
                                                               Foreground="#7f8c8d"
                                                               Margin="0,3,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>

                                        <!-- 2025-01-10 -->
                                        <Border Background="#0f3460"
                                                BorderBrush="#34495e"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                                Padding="12"
                                                Margin="0,5"
                                                Cursor="Hand">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#1e2a47"/>
                                                            <Setter Property="BorderBrush" Value="#00d4ff"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="2025-01-10 (五)" 
                                                               FontSize="13" 
                                                               FontWeight="SemiBold"
                                                               Foreground="White"/>
                                                    <TextBlock Text="2 天前 · 198 筆記錄" 
                                                               FontSize="10" 
                                                               Foreground="#7f8c8d"
                                                               Margin="0,3,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>

                                        <!-- 2025-01-09 -->
                                        <Border Background="#0f3460"
                                                BorderBrush="#34495e"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                                Padding="12"
                                                Margin="0,5"
                                                Cursor="Hand">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
