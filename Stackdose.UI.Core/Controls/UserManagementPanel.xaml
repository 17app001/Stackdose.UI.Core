<UserControl x:Class="Stackdose.UI.Core.Controls.UserManagementPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stackdose.UI.Core.Controls"
             xmlns:converters="clr-namespace:Stackdose.UI.Core.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Stackdose.UI.Core;component/Themes/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <converters:BoolToActiveStatusConverter x:Key="BoolToActiveStatusConverter"/>
            
            <!-- Modern Card Style -->
            <Style x:Key="UserCardStyle" TargetType="Border">
                <Setter Property="Background" Value="{DynamicResource Log.Bg.Main}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource Log.Border}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16"/>
                <Setter Property="Margin" Value="0,0,0,12"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="BorderBrush" Value="{DynamicResource Cyber.NeonBlue}"/>
                        <Setter Property="Background" Value="{DynamicResource Sensor.Bg.Header}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Modern Button Style -->
            <Style x:Key="ModernButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{DynamicResource Button.Bg.Success}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="16,8"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontFamily" Value="Microsoft JhengHei"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Opacity" Value="0.85"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="Border" Property="Opacity" Value="0.4"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{DynamicResource Cyber.Bg.Dark}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Action Bar -->
        <Border Grid.Row="0" 
                Background="{DynamicResource Plc.Bg.Main}"
                BorderBrush="{DynamicResource Plc.Border}"
                BorderThickness="1"
                CornerRadius="6"
                Padding="16"
                Margin="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" 
                           Orientation="Horizontal"
                           VerticalAlignment="Center">
                    <TextBlock Text="USER MANAGEMENT"
                               Foreground="{DynamicResource Sensor.Text.Title}"
                               FontSize="14"
                               FontWeight="Bold"
                               FontFamily="Consolas"/>
                    
                    <Border Background="{DynamicResource Status.Info}"
                            CornerRadius="4"
                            Padding="8,4"
                            Margin="16,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Total: "
                                       Foreground="White"
                                       FontSize="11"
                                       FontWeight="Bold"
                                       FontFamily="Consolas"/>
                            <TextBlock x:Name="TotalUsersText"
                                       Text="0"
                                       Foreground="White"
                                       FontSize="11"
                                       FontWeight="Bold"
                                       FontFamily="Consolas"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="{DynamicResource Status.Success}"
                            CornerRadius="4"
                            Padding="8,4"
                            Margin="8,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Active: "
                                       Foreground="White"
                                       FontSize="11"
                                       FontWeight="Bold"
                                       FontFamily="Consolas"/>
                            <TextBlock x:Name="ActiveUsersText"
                                       Text="0"
                                       Foreground="White"
                                       FontSize="11"
                                       FontWeight="Bold"
                                       FontFamily="Consolas"/>
                        </StackPanel>
                    </Border>
                    
                    <TextBlock x:Name="SubtitleText"
                               Text="SQLite Database"
                               Foreground="{DynamicResource Plc.Text.Gray}"
                               FontSize="11"
                               FontFamily="Consolas"
                               Margin="16,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal"
                           VerticalAlignment="Center">
                    <Button x:Name="AddUserButton"
                            Content="Add User"
                            Style="{StaticResource ModernButtonStyle}"
                            Background="{DynamicResource Button.Bg.Success}"
                            Click="AddUserButton_Click"
                            Margin="0,0,8,0"/>
                    <Button x:Name="RefreshButton"
                            Content="Refresh"
                            Style="{StaticResource ModernButtonStyle}"
                            Background="{DynamicResource Button.Bg.Info}"
                            Click="RefreshButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- User List (Card View) -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Padding="12,0,12,12">
            <ItemsControl x:Name="UserListPanel"
                          ItemsSource="{Binding Users}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource UserCardStyle}"
                                MouseLeftButtonDown="UserCard_MouseLeftButtonDown"
                                Tag="{Binding}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- User Info -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- User ID -->
                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               Text="User ID:"
                                               Foreground="{DynamicResource Plc.Text.Label}"
                                               FontSize="11"
                                               FontFamily="Consolas"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1"
                                               Text="{Binding UserId}"
                                               Foreground="{DynamicResource Plc.Text.Value}"
                                               FontSize="11"
                                               FontWeight="Bold"
                                               FontFamily="Consolas"/>

                                    <!-- Display Name -->
                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                               Text="Display Name:"
                                               Foreground="{DynamicResource Plc.Text.Label}"
                                               FontSize="11"
                                               FontFamily="Consolas"
                                               Margin="0,8,0,0"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1"
                                               Text="{Binding DisplayName}"
                                               Foreground="{DynamicResource Cyber.Text.Main}"
                                               FontSize="13"
                                               FontWeight="Bold"
                                               FontFamily="Microsoft JhengHei"
                                               Margin="0,8,0,0"/>

                                    <!-- Access Level -->
                                    <TextBlock Grid.Row="2" Grid.Column="0"
                                               Text="Access Level:"
                                               Foreground="{DynamicResource Plc.Text.Label}"
                                               FontSize="11"
                                               FontFamily="Consolas"
                                               Margin="0,8,0,0"/>
                                    <Border Grid.Row="2" Grid.Column="1"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            Margin="0,8,0,0"
                                            HorizontalAlignment="Left">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AccessLevel}" Value="Admin">
                                                        <Setter Property="Background" Value="{DynamicResource Button.Bg.Error}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding AccessLevel}" Value="Supervisor">
                                                        <Setter Property="Background" Value="{DynamicResource Button.Bg.Warning}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding AccessLevel}" Value="Instructor">
                                                        <Setter Property="Background" Value="{DynamicResource Button.Bg.Info}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding AccessLevel}" Value="Operator">
                                                        <Setter Property="Background" Value="{DynamicResource Button.Bg.Success}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding AccessLevel}"
                                                   Foreground="White"
                                                   FontSize="11"
                                                   FontWeight="Bold"
                                                   FontFamily="Consolas"/>
                                    </Border>

                                    <!-- Status -->
                                    <TextBlock Grid.Row="3" Grid.Column="0"
                                               Text="Status:"
                                               Foreground="{DynamicResource Plc.Text.Label}"
                                               FontSize="11"
                                               FontFamily="Consolas"
                                               Margin="0,8,0,0"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1"
                                               Text="{Binding IsActive, Converter={StaticResource BoolToActiveStatusConverter}}"
                                               FontSize="11"
                                               FontWeight="Bold"
                                               FontFamily="Consolas"
                                               Margin="0,8,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                        <Setter Property="Foreground" Value="{DynamicResource Status.Success}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                        <Setter Property="Foreground" Value="{DynamicResource Status.Error}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- Department & Email -->
                                    <TextBlock Grid.Row="4" Grid.Column="0"
                                               Text="Department:"
                                               Foreground="{DynamicResource Plc.Text.Label}"
                                               FontSize="11"
                                               FontFamily="Consolas"
                                               Margin="0,8,0,0"/>
                                    <StackPanel Grid.Row="4" Grid.Column="1"
                                               Orientation="Horizontal"
                                               Margin="0,8,0,0">
                                        <TextBlock Text="{Binding Department}"
                                                   Foreground="{DynamicResource Cyber.Text.Main}"
                                                   FontSize="11"
                                                   FontFamily="Consolas"/>
                                        <TextBlock Text=" | "
                                                   Foreground="{DynamicResource Plc.Text.Gray}"
                                                   FontSize="11"
                                                   Margin="8,0"/>
                                        <TextBlock Text="{Binding Email}"
                                                   Foreground="{DynamicResource Plc.Text.Gray}"
                                                   FontSize="10"
                                                   FontFamily="Consolas"/>
                                    </StackPanel>

                                    <!-- Created Info -->
                                    <TextBlock Grid.Row="0" Grid.Column="2" Grid.RowSpan="5"
                                               VerticalAlignment="Top"
                                               HorizontalAlignment="Right">
                                        <Run Text="Created: " 
                                             Foreground="{DynamicResource Plc.Text.Label}"
                                             FontSize="10"
                                             FontFamily="Consolas"/>
                                        <Run Text="{Binding CreatedAt, StringFormat='{}{0:yyyy-MM-dd}'}"
                                             Foreground="{DynamicResource Plc.Text.Gray}"
                                             FontSize="10"
                                             FontFamily="Consolas"/>
                                        <LineBreak/>
                                        <Run Text="by "
                                             Foreground="{DynamicResource Plc.Text.Label}"
                                             FontSize="10"
                                             FontFamily="Consolas"/>
                                        <Run Text="{Binding CreatedBy}"
                                             Foreground="{DynamicResource Plc.Text.Gray}"
                                             FontSize="10"
                                             FontFamily="Consolas"/>
                                    </TextBlock>
                                </Grid>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Row="1" 
                                           Orientation="Horizontal" 
                                           HorizontalAlignment="Right"
                                           Margin="0,12,0,0">
                                    <Button Content="Edit"
                                            Style="{StaticResource ModernButtonStyle}"
                                            Background="{DynamicResource Button.Bg.Success}"
                                            Padding="12,4"
                                            FontSize="11"
                                            Margin="0,0,8,0"
                                            Tag="{Binding}"
                                            Click="EditUserButton_Click"/>
                                    <Button Content="Reset Password"
                                            Style="{StaticResource ModernButtonStyle}"
                                            Background="{DynamicResource Button.Bg.Warning}"
                                            Padding="12,4"
                                            FontSize="11"
                                            Margin="0,0,8,0"
                                            Tag="{Binding}"
                                            Click="ResetPasswordButton_Click"/>
                                    <Button Padding="12,4"
                                            FontSize="11"
                                            Margin="0,0,8,0"
                                            Tag="{Binding}"
                                            Click="ToggleActiveButton_Click">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource Button.Bg.Error}"/>
                                                        <Setter Property="Content" Value="Disable"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                        <Setter Property="Background" Value="{DynamicResource Button.Bg.Success}"/>
                                                        <Setter Property="Content" Value="Enable"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="View Audit"
                                            Style="{StaticResource ModernButtonStyle}"
                                            Background="#9C27B0"
                                            Padding="12,4"
                                            FontSize="11"
                                            Tag="{Binding}"
                                            Click="ViewAuditButton_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
