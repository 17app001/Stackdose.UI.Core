<UserControl x:Class="Stackdose.UI.Core.Controls.PrintHeadPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stackdose.UI.Core.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="300"
             x:Name="root">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- PrintHead Status List -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="10" Background="#1a1a2e">
            <StackPanel x:Name="PrintHeadContainer">
                <!-- PrintHead controls will be added dynamically in code-behind -->
            </StackPanel>
        </ScrollViewer>

        <!-- Flash Control Area -->
        <Border Grid.Row="1" 
                BorderBrush="#FFA726" 
                BorderThickness="2" 
                CornerRadius="5" 
                Padding="8" 
                Margin="10"
                Background="{DynamicResource Plc.Bg.Main}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Input Box -->
                <Grid Grid.Row="0" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="Khz:" 
                               FontSize="11" 
                               Foreground="{DynamicResource Cyber.Text.Muted}" 
                               VerticalAlignment="Center" 
                               Margin="0,0,8,0"/>

                    <TextBox Grid.Column="1" 
                             x:Name="FlashTimesTextBox"
                             Height="28" 
                             Background="{DynamicResource Cyber.Bg.Dark}" 
                             Foreground="{DynamicResource Cyber.Text.Main}" 
                             BorderBrush="{DynamicResource Plc.Border}" 
                             BorderThickness="1"
                             Padding="5"
                             FontSize="12"
                             Text="0.1,1,1,1"
                             VerticalContentAlignment="Center"/>
                </Grid>

                <!-- Flash Button -->
                <Button Grid.Row="1" 
                        x:Name="FlashButton"
                        Content="Flash PrintHead" 
                        Height="32"
                        Background="#FFA726" 
                        Foreground="Black" 
                        BorderBrush="#FF6F00" 
                        BorderThickness="2"
                        FontSize="12"
                        FontWeight="Bold"
                        HorizontalAlignment="Stretch"
                        Click="FlashButton_Click"
                        Cursor="Hand"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
