<UserControl x:Class="Stackdose.UI.Core.Controls.SimulatorControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="400"
             Background="#1E1E2E">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="PLC Simulator Control Panel" 
                   FontSize="18" FontWeight="Bold" 
                   Foreground="#00D9FF" Margin="0,0,0,15"/>

        <!-- Real-time Status -->
        <Border Grid.Row="1" Background="#2A2A3E" CornerRadius="8" Padding="15" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Real-time Status" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Temperature" Foreground="Gray" FontSize="12"/>
                        <TextBlock x:Name="TempDisplay" Text="25.0 C" 
                                   FontSize="20" FontWeight="Bold" Foreground="#FFD700"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Axis Position" Foreground="Gray" FontSize="12"/>
                        <TextBlock x:Name="AxisDisplay" Text="0 um" 
                                   FontSize="20" FontWeight="Bold" Foreground="#00FF00"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Control Buttons -->
        <Border Grid.Row="2" Background="#2A2A3E" CornerRadius="8" Padding="15" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Device Control" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                
                <UniformGrid Columns="2" Rows="2">
                    <Button Content="Start Heater" Click="OnStartHeater" 
                            Background="#FF4500" Margin="5" Padding="10"/>
                    <Button Content="Stop Heater" Click="OnStopHeater" 
                            Background="#4169E1" Margin="5" Padding="10"/>
                    <Button Content="Start Motor" Click="OnStartMotor" 
                            Background="#32CD32" Margin="5" Padding="10"/>
                    <Button Content="Stop Motor" Click="OnStopMotor" 
                            Background="#DC143C" Margin="5" Padding="10"/>
                </UniformGrid>
            </StackPanel>
        </Border>

        <!-- Fault Injection -->
        <Border Grid.Row="3" Background="#2A2A3E" CornerRadius="8" Padding="15" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Fault Injection (Testing)" FontWeight="Bold" Foreground="Yellow" Margin="0,0,0,10"/>
                
                <UniformGrid Columns="3">
                    <Button Content="Temp Error" Click="OnInjectTempError" 
                            Background="#FF6347" Margin="5" Padding="8"/>
                    <Button Content="Servo Error" Click="OnInjectServoError" 
                            Background="#FF6347" Margin="5" Padding="8"/>
                    <Button Content="Clear All" Click="OnClearAllFaults" 
                            Background="#228B22" Margin="5" Padding="8"/>
                </UniformGrid>
            </StackPanel>
        </Border>

        <!-- Alarms and Stats -->
        <Border Grid.Row="4" Background="#2A2A3E" CornerRadius="8" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Alarm Log" FontWeight="Bold" 
                           Foreground="White" Margin="0,0,0,10"/>
                
                <ListBox x:Name="AlarmList" Grid.Row="1" 
                         Background="#1A1A2E" Foreground="Orange" 
                         BorderThickness="0" FontFamily="Consolas"/>

                <StackPanel Grid.Row="2" Margin="0,10,0,0">
                    <TextBlock Text="Statistics" FontWeight="Bold" 
                               Foreground="White" Margin="0,0,0,5"/>
                    <TextBlock x:Name="StatsDisplay" 
                               Foreground="LightGray" FontSize="11" 
                               FontFamily="Consolas" TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
