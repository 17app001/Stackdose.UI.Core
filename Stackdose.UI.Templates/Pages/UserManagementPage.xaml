<UserControl x:Class="Stackdose.UI.Templates.Pages.UserManagementPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:core="http://schemas.stackdose.com/wpf"
             mc:Ignorable="d"
             d:DesignWidth="1400"
             d:DesignHeight="900">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Stackdose.UI.Core;component/Themes/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{DynamicResource Cyber.Bg.Dark}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Action Bar -->

        <!-- Main Content: UserManagementPanel from Core -->
        <Border Grid.Row="1"
                Background="{DynamicResource Sensor.Bg.Main}"
                BorderBrush="{DynamicResource Sensor.Border}"
                BorderThickness="1"
                CornerRadius="6"
                Margin="16,0,16,16">
            
            <!-- Core Component -->
            <core:UserManagementPanel x:Name="UserManagementPanel"/>
            
        </Border>
    </Grid>
</UserControl>

