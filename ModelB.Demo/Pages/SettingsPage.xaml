<UserControl x:Class="ModelB.Demo.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:core="http://schemas.stackdose.com/wpf"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <Border Grid.Row="0"
                Background="{DynamicResource Plc.Bg.Main}"
                BorderBrush="{DynamicResource Plc.Border}"
                BorderThickness="1"
                CornerRadius="6"
                Padding="20"
                Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="SYSTEM SETTINGS"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{DynamicResource Cyber.Text.Main}"
                           FontFamily="Consolas"/>
                <TextBlock Text="Configure system parameters and preferences"
                           FontSize="14"
                           Foreground="{DynamicResource Plc.Text.Label}"
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0">

                <!-- PLC Connection Settings -->
                <Border Background="{DynamicResource Sensor.Bg.Main}"
                        BorderBrush="{DynamicResource Sensor.Border}"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="20"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="PLC CONNECTION SETTINGS"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource Sensor.Text.Title}"
                                   FontFamily="Consolas"
                                   Margin="0,0,0,16"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="IP Address:"
                                       Foreground="{DynamicResource Plc.Text.Label}"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,12"/>
                            <TextBox Grid.Row="0" Grid.Column="1"
                                     Text="192.168.22.39"
                                     FontSize="14"
                                     Padding="8"
                                     Margin="0,0,0,12"/>

                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Text="Port:"
                                       Foreground="{DynamicResource Plc.Text.Label}"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,12"/>
                            <TextBox Grid.Row="1" Grid.Column="1"
                                     Text="3000"
                                     FontSize="14"
                                     Padding="8"
                                     Margin="0,0,0,12"/>

                            <TextBlock Grid.Row="2" Grid.Column="0"
                                       Text="Scan Interval (ms):"
                                       Foreground="{DynamicResource Plc.Text.Label}"
                                       FontSize="14"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Row="2" Grid.Column="1"
                                     Text="150"
                                     FontSize="14"
                                     Padding="8"/>
                        </Grid>

                        <Button Content="Save PLC Settings"
                                Background="{DynamicResource Button.Bg.Info}"
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Bold"
                                Padding="12,8"
                                Margin="0,16,0,0"
                                HorizontalAlignment="Right"
                                Width="200"
                                Click="SavePlcSettings_Click"/>
                    </StackPanel>
                </Border>

                <!-- System Preferences -->
                <Border Background="{DynamicResource Sensor.Bg.Main}"
                        BorderBrush="{DynamicResource Sensor.Border}"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="20"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="SYSTEM PREFERENCES"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource Sensor.Text.Title}"
                                   FontFamily="Consolas"
                                   Margin="0,0,0,16"/>

                        <CheckBox Content="Enable Auto-Connect on Startup"
                                  IsChecked="True"
                                  FontSize="14"
                                  Foreground="{DynamicResource Plc.Text.Value}"
                                  Margin="0,0,0,12"/>

                        <CheckBox Content="Enable Data Logging"
                                  IsChecked="True"
                                  FontSize="14"
                                  Foreground="{DynamicResource Plc.Text.Value}"
                                  Margin="0,0,0,12"/>

                        <CheckBox Content="Enable Audit Trail"
                                  IsChecked="True"
                                  FontSize="14"
                                  Foreground="{DynamicResource Plc.Text.Value}"
                                  Margin="0,0,0,12"/>

                        <CheckBox Content="Show System Notifications"
                                  IsChecked="True"
                                  FontSize="14"
                                  Foreground="{DynamicResource Plc.Text.Value}"/>

                        <Button Content="Save Preferences"
                                Background="{DynamicResource Button.Bg.Success}"
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Bold"
                                Padding="12,8"
                                Margin="0,16,0,0"
                                HorizontalAlignment="Right"
                                Width="200"
                                Click="SavePreferences_Click"/>
                    </StackPanel>
                </Border>

                <!-- About -->
                <Border Background="{DynamicResource Sensor.Bg.Main}"
                        BorderBrush="{DynamicResource Sensor.Border}"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="ABOUT"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource Sensor.Text.Title}"
                                   FontFamily="Consolas"
                                   Margin="0,0,0,16"/>

                        <TextBlock FontSize="14"
                                   Foreground="{DynamicResource Plc.Text.Value}"
                                   LineHeight="24">
                            <Run Text="System Name: MODEL-B DEMO SYSTEM"/><LineBreak/>
                            <Run Text="Version: 1.0.0"/><LineBreak/>
                            <Run Text="Build Date: 2025-01-29"/><LineBreak/>
                            <Run Text="Framework: .NET 8.0"/><LineBreak/>
                            <Run Text="Copyright ? 2025 Stackdose. All rights reserved."/>
                        </TextBlock>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
